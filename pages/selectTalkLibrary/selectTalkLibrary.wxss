.fr26, .fr30 {
    line-height: 100%;
}

page {
    background-color: #f5f5f5;
}

.input-layout {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 10rpx 30rpx 0 30rpx;
}

.input-box {
    box-sizing: border-box;
    padding-left: 30rpx;
    width: 100%;
    height: 70rpx;
    border-radius: 100rpx;
    background-color: rgba(255, 255, 255, 0.15);
}

.input {
    color: rgba(255, 255, 255, 1);
    width: 540rpx;
}

.input-holder {
    color: #999ca0;
}

.search {
    padding: 0 40rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: rgba(255, 255, 255, 0.3);
    border-radius: 70rpx;
}

.item {
    box-sizing: border-box;
    width: 100vw;
    background-color: #fff;
    padding: 22rpx 26rpx;
    margin-bottom: 1rpx;
}
.company-talk .item:not(:last-of-type),.my-talk .item:not(:last-of-type){
  border-bottom: 1rpx solid #f0f0f0;
}
.item-selected {
    background-color: #f7f7f7;
    transition: 0.3s;
}

.checkBox {
    box-sizing: border-box;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 1rpx solid #c1c1c1;
    background-color: #f7f7f7;
    margin-right: 30rpx;
    font-size: 36rpx;
    color: #ff9b1f;
}

.checkBox-selected {
    border: 0;
}

.image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    background-color: #ccc;
    margin-right: 30rpx;
}

.title {
    line-height: 54rpx;
    margin-bottom: 42rpx;
    margin-top: -12rpx;
}

.price {
    color: #ff3600;
}

.holder {
    height: 98rpx;
}

.btn {
    height: 98rpx;
    width: 100vw;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #ff9b1f;
}
.c-main{
    color: #ff9b1f;
}
.select-title{
    height: 80rpx;
    border-bottom: 1rpx solid #f0f0f0;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.my-talk{
    background: #fff;
    margin-bottom:10rpx; 
    border-bottom: 1rpx solid #e6e6e6;
}
.company-talk{
    border-top:1rpx solid #e6e6e6;
    background:#fff;
    border-bottom:1rpx solid #e6e6e6;
    margin-bottom:10rpx;
}
.company-talk>view:first-of-type{
    border-bottom: 1rpx solid #f0f0f0;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.info{
    line-height: 48rpx;
}