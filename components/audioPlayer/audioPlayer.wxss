@import "/iconfont/iconfont";
@import "/comm/base.wxss";
.border {
  width: 100%;
  height: 178rpx;
  border: 1rpx solid;
  box-sizing: border-box;
  border-radius: 5rpx;
}

.label {
  width: 100%;
  height: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.title {
  height: 28rpx;
  font-weight: bold;
  white-space: nowrap;
}

.view {
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.button-view {
  width: 21.7%;
}

.button {
  width: 68rpx;
  height: 68rpx;
  border-radius: 68rpx;
  margin: 0 auto;
}

.button i {
  font-size: 68rpx;
  line-height: 68rpx;
}

.info {
  display: flex;
  width: 73%;
  height: 100%;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 0;
}

.time-view {
  display: flex;
  justify-content: space-between;
}

.width100 {
  box-sizing: border-box;
  width: 100%;
}

.slider {
  margin: 0;
}

.count {
  text-align: center;
  white-space: nowrap;
}

.fr26 {
  font-size: 26rpx;
  line-height: 26rpx;
}

.fr24 {
  font-size: 24rpx;
  line-height: 24rpx;
}

.fr20 {
  font-size: 20rpx;
  line-height: 20rpx;
}

.c3 {
  color: #333;
}

.c9 {
  color: #999;
}

.tinyPlayer {
  font-size: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: white;
  height: 70rpx;
  width: 70rpx;
  line-height: 100%;
}

.voicePlayer {
  height: 60rpx;
  min-width: 240rpx;
  background-color: #F2F2F2;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding: 0 22rpx 0 30rpx;
  position: relative;
}

.voicePlayer::after {
  content: '';
  width: 18rpx;
  height: 16rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #F2F2F2;
  clip-path: polygon(50% 0, 100% 50%, 50% 100%, 0 50%);
}

.voicePlayer-icon-play {
  animation: voicePlay .8s infinite;
}

@keyframes voicePlay {
  0% {
    clip-path: circle(22rpx at 8rpx);
  }
  25% {
    clip-path: circle(10rpx at 2rpx);
  }
  100% {
    clip-path: circle(22rpx at 8rpx);
  }
}