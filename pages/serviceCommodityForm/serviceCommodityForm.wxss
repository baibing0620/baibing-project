

.c-c2c5cc {
    color: #c2c5cc;
}

.weight-normal {
    font-weight: normal;
}

.icon-xiala2 {
    font-size: 26rpx;
    color: #3f454b;
    margin-left: 30rpx;
}

.layout {
    width: 100vw;
    box-sizing: border-box;
    padding: 30rpx;
    line-height: 62rpx;
    font-size: 32rpx;
    display: flex;
    flex-wrap: nowrap;
    background-color: #ffffff;
    border-bottom: 1rpx solid #ebebeb;
}

.label {
    margin-right: 60rpx;
}

.input {
    height: 62rpx;
}

.textarea {
    height: 240rpx;
    box-sizing: border-box;
}

.textarea-holderFix {
    padding-top: 15rpx;
}

.picker-layout {
    width: 100%;
    height: 100%;
}

.picker {
    height: 100%;
}

.check-group {
    box-sizing: border-box;
    padding-left: 48rpx;
}

.check-item {
    margin-top: 6rpx;
    color: #c2c5cc;
    position: relative;
    transition: .1s;
}

.check-item:first-child {
    margin-top: 0;
}

.check-item::before {
    content: '';
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    box-sizing: border-box;
    border: 1rpx solid #999999;
    position: absolute;
    left: -22rpx;
    top: 50%;
    transform: translate(-100%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 100%;
    font-size: 18rpx;
    color: #ffffff;
    transition: .1s;
}

.check-item-checked {
    color: #17181a;
}

.check-item-checked::before {
    content: '\e707';
    background-color: #1f94fd;
    border: 0;
}

.submit {
    width: 690rpx;
	height: 90rpx;
	background-image: linear-gradient(90deg, 
		#1f94fd 0%, 
		#16b1ff 100%);
    border-radius: 6rpx;
    margin: 56rpx auto 30rpx auto;
}