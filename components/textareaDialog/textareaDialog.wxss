.layout {
    height: 512rpx;
    width: 600rpx;
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    border-radius: 20rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.textarea-layout {
    height: 400rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
}

.textarea {
    height: 100%;
    width: 100%;
    border-radius: 10rpx;
    background-color: #FAFAFA;
    border: 1rpx solid #F0F0F0;
    box-sizing: border-box;
    color: #333333;
    font-size: 26rpx;
    line-height: 38rpx;
    padding: 20rpx 30rpx;
    font-weight: 500;
}

.textarea-placeholder {
    color: #CCCCCC;
    font-weight: 500;
}

.controller {
    flex: 1;
    width: 100%;
    border-top: 1rpx solid #E5E5E5;
    display: flex;
}

.controller-button {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: 500;
    border-right: 1rpx solid #E5E5E5;
    letter-spacing: 2rpx;
}

.controller-button:last-child {
    border-right: none;
}

.controller-button-hover {
    background-color: #E5E5E5;
}

.color-confirm {
    color: #F29E42;
}

.color-cancel {
    color: #B3B3B3;
}

.cover {
    background-color: #000000;
    opacity: 0.8;
    height: 100vh;
    width: 100vw;
    position: fixed;
    left: 0;
    top: 0;
}