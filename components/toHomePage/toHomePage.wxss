@import '/iconfont/iconfont.wxss';
.toHomePage-layout {
	height: 138rpx;
	width: 100vw;
	opacity: 1;
  	display: flex;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30rpx;
	transition: .3s;
}

.toHomePage-layout-hidden {
	height: 0;
	opacity: 0;
}
.toHomePage-position image {
	width: 10rpx;
	height: 10rpx;
	padding-bottom: 3rpx;
}
.toHomePage-info {
	flex: 1;
	height: 138rpx;
	display: flex;
	align-items: center;
}
.fr22 {
	font-size: 22rpx;
}
.toHomePage-avatar {
	width: 110rpx;
	height: 110rpx;
	background-color: #f7f7f7;
	border-radius: 55rpx;
	border: solid 2rpx #e5e5e5;
	box-sizing: border-box;
}

.toHomePage-name-layout {
	margin-left: 20rpx;
}

.toHomePage-nickname {
	font-size: 40rpx;
	font-weight: 600;
}

.toHomePage-position {
	font-size: 24rpx;
	color: #9b9b9b;
}

.toHomePage-gate-layout {
	display: flex;
	align-items: center;
	padding-right: 30rpx;
}
.toHomePage-gate>view{
	width: 50rpx;
	height: 50rpx;
	margin: 4rpx auto 4rpx;
}
.toHomePage-gate>view image {
width: 100%;
height: 100%;
}
.toHomePage-gate {
    box-sizing: border-box;
    display: flex;
		justify-content: center;
		flex-direction: column;
    margin-left: 26rpx;
    font-size: 32rpx;
    padding: 0;
    background-color: transparent;
}
.consulting{
	position: absolute;
	background-color: #4792f3;
	border-radius: 20rpx;
	color: #fff;
	padding: 0px 18rpx;
	font-size: 25rpx;
	bottom: -3rpx;
	left: 12rpx;
	line-height: 38rpx;
	height: 39rpx;
}
