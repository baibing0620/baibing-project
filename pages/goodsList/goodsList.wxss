/*动态展示*/

.limit-flag {
    top: 30rpx;
    left: 0;
    margin-left: 10rpx;
}

.select-scroll {
  padding-left: 32rpx;
  width: 680rpx;
  height: 90rpx;
  white-space: nowrap;
  box-sizing: border-box;
  position: relative;
}

.select-scroll::after{
    content: "";
    position: absolute;
    right:0;
    width: 0;
    height: 100%;
    box-shadow: 0 0 8rpx 6rpx  rgba(153, 153, 153, 0.15);
    background:#eee;
}

.select-scroll-item {
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  margin-right: 62rpx;
}

.select-scroll-item:last-of-type {
  /* margin-right: 0; */
}

.select-down-box, .select-up-box {
  width: 70rpx;
  height: 90rpx;
  background: #FFFFFF;
  position: relative;
  z-index: 800;
  overflow: hidden;
}


.tab-active {
  color: #FE3636;
}
.tabIconBox {
  margin-left: 8rpx;
}
.tabIcon {
  line-height: 22rpx;
}

.scroll-tab-bar {
  width: 750rpx;
  border-top: 1rpx solid #F7F7F7;
  border-bottom: 1rpx solid #F7F7F7;
}

.select-scroll .tab-active{
  position: relative;
}
.select-scroll .tab-active::after{
  content: '';
  width: 60rpx;
  height: 4rpx;
  background: #FE3636;
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 9;
}

.iconUp {
  transform: rotate(180deg);
}

.labelHeadMask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0,0,0,0.3);
  z-index: 999;
}
.labelHeadBox {
  flex-wrap: wrap;
  padding: 0 0  40rpx 30rpx;
}

.labelItem {
  width: 210rpx;
  height: 60rpx;
  background: #F6F6F6;
  border-radius: 30rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  text-align: center;
  padding: 0 30rpx;
}

.active-label {
  background: #ffffff;
  border: 2rpx solid #FE3636;
  color: #FE3636;
  line-height: 56rpx;
}

.labelGroupMask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0,0,0,0.3);
  z-index: 998;
}

.labelGroupBox {
  padding-left: 30rpx;
  padding-bottom: 50rpx;
}

.group-scroll {
  width: 100%;
  max-height: 500rpx;
}

.labelGroupContainer {
  flex-wrap: wrap;
}

.labelButtonBox {
  padding: 0rpx 30rpx 50rpx;
}

.label-button {
  width: 330rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
}

.button-left {
  background: #FFFFFF;
  border: 2rpx solid #CCCCCC;
  color: #333333;
}
.button-right {
  background: #FE3636;
  color: #fff;
}