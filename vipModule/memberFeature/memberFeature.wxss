.container {
  background-color: #fff;
  min-height: 100vh;
}

.header {
  position: relative;
  width: 750rpx;
  height: 280rpx;
  overflow: hidden;
  z-index: 1;
}

.mask-vip {
  position: absolute;
  width: 140%;
  height: 280rpx;
  top: 0;
  left: -20%;
  z-index: 1;
  border-radius: 0 0 50% 50%;
  box-shadow: 5rpx 0 20rpx 1rpx rgba(0, 0, 0, 0.33) inset;
  overflow: hidden;
}

.vip-box {
  position: absolute;
  width: 650rpx;
  height: 240rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0rpx;
  box-sizing: border-box;
  color: #E6CB9B;
  font-size: 24rpx;
  border-radius: 20rpx;
  z-index: 1;
}

.vip-box view {
  line-height: 1;
}

.vipImage {
  width: 650rpx;
  height: 250rpx;
  position: absolute;
}

.vipCard {
  font-size: 60rpx;
  font-weight: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-shadow: 0rpx 3rpx 9rpx rgba(30, 33, 39, 0.5);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.vip-rights {
  margin-top: 35rpx;
}

.vip-rights .vip-rights-title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #9B7C57;
  margin-bottom: 18rpx;
}

.vip-rights .vip-rights-title .circle-left::after {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  display: block;
  content: " ";
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #D9D9D9;
  z-index: 100;
}

.vip-rights .vip-rights-title .circle-right::after {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  display: block;
  content: " ";
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #D9D9D9;
  z-index: 100;
}

.vip-rights .vip-rights-title view:nth-child(2) {
  margin: 0 30rpx;
}

.vip-rights .vip-rights-title .line {
  position: relative;
  width: 82rpx;
  height: 1rpx;
  background: #D9D9D9;
}

.icon-group {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.icon-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  padding: 25rpx 0;
}

.icon-group .icon-item {
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(0deg, #DDBC88 0%, #F0E0C4 100%);
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
}

.icon-group .icon-item text {
  font-size: 40rpx;
  color: #705018;
}

.icon-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1;
  margin-top: 30rpx;
}

.feature-box {
  padding: 0 30rpx;
  margin-top: 15rpx;
  padding-bottom: 300rpx;
}

.feature-item {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #F7F7F7;
}

.feature-item .item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.feature-item .item-entry {
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
}

.feature-item .item-entry text {
  font-size: 22rpx;
}

.hudu {
  border-radius: 50%;
  width: 2400rpx;
  height: 2000rpx;
  position: absolute;
  z-index: 9999;
  left: -818rpx;
  top: -1722rpx;
  background: #fff;
  border: 1rpx solid red;
}

.footer {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 100rpx;
}

.content {
  display: flex;
  align-items: baseline;
  top: 100rpx;
  left: 220rpx;
  z-index: -1;
}

.xiangqing {
  width: 30rpx;
  height: 30rpx;
  color: #d2be9a;
}

.noUse {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  line-height: 30rpx;
  padding: 0 10rpx 0 19rpx;
  z-index: -1;
}

.you {
  color: #999999;
}

.vip-btn {
  width: 690rpx;
  height: 90rpx;
  background: linear-gradient(90deg, #E0C192 0%, #CBA673 100%);
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #623E0F;
  margin-top: 20rpx;
  text-align: center;
  line-height: 90rpx;
}

.hiddenbox {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100000000;
}

.hiddenbox .hideView {
  width: 100%;
  min-height: 150rpx;
  padding: 30rpx;
  background-color: white;
  transform: translateX(-4%);
  padding-bottom: 80rpx;
}

.openCondition {
  text-align: center;
  font-size: 35rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1;
  padding-bottom: 10rpx;

}

.openConditionItem {
  margin-top: 20rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  line-height: 35rpx;
}