page {
    background: #f7f7f7;
}

.container {
    background-color: #fff;
}

.container>view:not(:first-of-type) {
    padding: 40rpx 30rpx;
    box-sizing: border-box;
}
.container>view:first-of-type {
    height: 120rpx;
    padding: 0 16rpx 0 30rpx;
    box-sizing: border-box;
}
.container>view:not(:last-of-type) {
    border-bottom: 1rpx solid #f5f5f5;
}
.container>view:last-of-type {
    border-bottom: 1rpx solid #e6e6e6;

}.container>view>view:first-child>text {
    margin-right: 18rpx;
}
