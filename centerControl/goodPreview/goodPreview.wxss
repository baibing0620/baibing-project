page{
    padding-top: 60rpx;
}
button.container {
    position: relative;
    display: block;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-size: medium;
    text-align: left;
    text-decoration: none;
    line-height: normal;
    border-radius: 0;
    overflow: hidden;
    color: #000000;
    background-color: #f8f8f8;
}

.action-play {
    position: absolute;
    height: 100%;
    width: 100%;
}

.play-img {
    width: 100rpx;
    height: 100rpx;
}

.fix-qrcode {
    position: fixed;
    top: 60px;
    right: 20rpx;
    background: rgba(0, 0, 0, 0.5);
    z-index: 100;
    border-radius: 50rpx;
    color: white;
    height: 70rpx;
    min-width: 70rpx;
    line-height: 70rpx;
}

.fix-home-page {
    position: fixed;
    top: 20px;
    right: 20rpx;
    background: rgba(0, 0, 0, 0.5);
    z-index: 100;
    border-radius: 50rpx;
    color: white;
    height: 70rpx;
    min-width: 70rpx;
    line-height: 70rpx;
}

.goods-info {
    padding: 16rpx;
    background: white;
}

.goods-info .title {
    width: 100%;
    padding-top: 14rpx;
    padding-bottom: 6rpx;
}

.goods-info .title>.icon-share {
    display: block;
    margin-left: 20rpx;
    width: 100rpx;
    text-align: center;
    border: none;
    margin: 0;
    padding: 0;
    line-height: 38rpx;
    background-color: white;
}

.price-sales {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-top: 20rpx;
}

.vip-price-tags {
    width: 90rpx;
    height: 56rpx;
    border-radius: 4rpx;
    text-align: center;
    line-height: 56rpx;
    background: #ffd151;
    color: #76390c;
    margin-right: 6rpx;
}

.goods-info .price {
    font-size: 24rpx;
    color: #ff3600;
}

.group-buying-info {
    margin-top: 10rpx;
    padding: 10rpx 20rpx;
    background: white;
    height: 138rpx;
    color: #4c4c4c;
}

.goods-info .sales {
    box-sizing: border-box;
    padding-right: 10rpx;
}

.goods-desc {
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    box-sizing: border-box;
    padding: 20rpx;
    background: #ffffff;
}

.goods-desc-context {
    text-indent: 2em;
    display: block;
    width: 100%;
    margin-top: 20rpx;
}

.menu {
    margin-top: 10rpx;
    min-height: 82rpx;
    border-bottom: 2rpx solid #ebebeb;
}

.menu .menu-item {
    position: relative;
    flex: 1;
    line-height: 80rpx;
    text-align: center;
    background: white;
    font-size: 28rpx;
    color: #888888;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menu-item>.border {
    position: absolute;
    left: 0;
    border-left: 1rpx solid #EBEBEB;
    height: 40rpx;
}

.menu .active .title {
    color: #ff4715;
    border-bottom: 4rpx solid #ff4715;
}

.goods-detail-item {
    width: 100%;
    display: block;
}

.goods-specifications-box {
    display: flex;
    flex-direction: column;
    background: white;
    padding: 20rpx;
}

.goods-specifications-item {
    padding: 5rpx 10rpx;
}

.bottom-bar-box {
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    bottom: 0;
    z-index: 50;
}

.cannot-buy-reason {
    background: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 28rpx;
    padding: 10rpx;
    line-height: 38rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom-bar {
    height: 100rpx;
    background: #fff;
    box-shadow: 0rpx 0rpx 6rpx #888;
    z-index: 20;
    width: 100%;
    display: flex;
}

.contact-btn {
    flex: 1;
}

.contact-btn>button {
    color: #999999;
    background: #fff;
    margin: 0;
    padding: 0;
    border: none;
    border-radius: 0;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 50rpx !important;
    box-sizing: border-box;
    border-right: 1rpx solid #ebebeb;
}

.border-r {
    border-right: 1rpx solid #ebebeb;
}

.bottom-bar .cart {
    flex: 1;
    color: #888;
    font-size: 24rpx;
    text-align: center;
    box-sizing: border-box;
    padding: 10rpx 0;
}

.buy-btn {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    flex: 2;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 28rpx;
    color: white;
}

.icon-gouwuche {
    display: block;
    height: 50rpx;
    font-size: 50rpx;
    line-height: 50rpx;
    color: #999999;
}

.br {
    border-right: 1rpx solid #ebebeb;
}

.cart .icon-xingxing {
    font-size: 50rpx;
    color: #999999;
}

.cart .icon-shoucang2 {
    font-size: 55rpx;
    color: #ffd247;
}

.page-mask {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    position: fixed;
    background: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    z-index: 101;
}

.transparent {
    flex: 1;
}

.dialog1 {
    width: 100%;
    background: white;
}

.dialog1 .media {
    padding: 10rpx;
    border-bottom: 1rpx solid #eeeeee;
}

.dialog1 .media-body {
    height: 120rpx;
}

.dialog1 .img-thumbnail {
    display: block;
    width: 120rpx;
    height: 120rpx;
}

.media-context {
    height: 120rpx;
    margin-left: 22rpx;
    color: #666666;
}

.dialog1 .media-close {
    margin-right: 22rpx;
}

.dialog1 .options {
    padding: 20rpx;
    color: #666666;
    background: white;
    border-bottom: 1rpx solid #eeeeee;
}

.dialog1 .options .item-values {
    display: flex;
    flex-wrap: wrap;
}

.dialog1 .options .item-values .values {
    font-size: 24rpx;
    color: #333333;
    margin: 20rpx 20rpx 20rpx 0;
    background: rgba(0, 0, 0, 0.1);
    padding: 16rpx 20rpx;
}

.dialog1 .options .item-values .active {
    background: #f9c00f;
    color: #fff;
}

.dialog1 .buy-num {
    height: 100rpx;
    padding: 10rpx 20rpx;
    line-height: 100rpx;
}

.dialog1 .quantity {
    line-height: 56rpx;
    text-align: center;
    padding-right: 10rpx;
}

.dialog1 .quantity text.minus,
.dialog1 .quantity text.plus {
    display: block;
    height: 56rpx;
    width: 56rpx;
    background: #eee;
    color: #6b6b6b;
    font-weight: 900;
}

.dialog1 .quantity input.num {
    box-sizing: border-box;
    background: white;
    text-align: center;
    height: 56rpx;
    width: 100rpx;
}

.dialog1 .dialog1-btn-box {
    display: flex;
    width: 100%;
    height: 90rpx;
}

.cutdown-box {
    margin-top: 10rpx;
    line-height: 44rpx;
    padding: 16rpx 10rpx;
    color: white;
}

.btn-disable {
    background: #ccc;
    border-left: 1rpx solid white;
}

.slide-image {
    height: 100%;
    width: 100%;
}

/*评论*/

.goods-evaluate {
    height: 140rpx;
    box-shadow: 1rpx 0 10rpx rgba(178, 178, 178, 0.6);
}

.goods-evaluate-rate {
    width: 200rpx;
    color: #ff4715;
    border-right: 1rpx solid #e6e6e6;
}

.goods-evaluate-category {
    padding: 0 15rpx;
    height: 50rpx;
    background-color: #d9d9d9;
    border-radius: 10rpx;
    margin: 0 0 10rpx 20rpx;
    color: #fff;
    box-sizing: border-box;
}

.goods-img-box {
    display: block;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.goods-evaluate-content {
    margin: 30rpx;
    color: #4d4d4d;
    padding-bottom: 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e6e6e6;
}

.comments-active {
    background-color: #ff6201;
}

/* 标签 */
.tags-box {
    line-height: 70rpx;
    padding: 0 20rpx;
    background: white;
    border-top: 1rpx solid #ebebeb;
}

.tags-box .icon-gouxuan {
    display: inline-block;
    margin-right: 20rpx;
}

.modal-service-box {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: rgba(0, 0, 0, 0.3);
    z-index: 120;
}

.close-service {
    flex: 1
}

.service-title {
    text-align: center;
    padding-top: 36rpx;
    padding-bottom: 26rpx;
}

.service-box {
    padding: 0 30rpx;
    background: white;
    padding-bottom: 40rpx;
}

.service-item {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #f5f5f5;
}


.showTip{
    width: 100%;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    background-color: #999;
    color: #fff;
    position: fixed;
    left: 0;
    top: 0;
    font-size: 24rpx;
}
.selectBtn{
    width: 100%;
    height: 98rpx;
    background-color: #ff9b1f;
    color: #fff;
    line-height: 98rpx !important;
    border-radius: 0;
    font-size: 28rpx;
    position: fixed;
    left: 0;
    bottom: 0;
}