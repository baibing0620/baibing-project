.fr36, .fr28, .fr26, .fr24 {
  line-height: 100%;
}

page{
  background-color: #fff;
}

.info-card {
  box-sizing: border-box;
  width: 100%;
  background-color: black;
  position: relative;
  z-index: 101;
  box-shadow: 0 0 14rpx 1rpx rgba(0, 0, 0, .1);
  padding: 30rpx;
}

.border-bottom {
  border-bottom: 1rpx solid rgba(255, 255, 255, .05);
}

.avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.relative {
  position: relative;
}

.info-layout {
  width: 100%;
  box-sizing: border-box;
}

.info {
  margin-left: 30rpx;
}

.nickname {
  font-weight: bold;
  width: 400rpx;
  line-height: 40rpx;
}

.mark {
  position: absolute;
  top: 22rpx;
  right: 0;
  color: black;
}

.mark>.iconfont {
  font-size: 18rpx;
  line-height: 100%;
  margin-left: 16rpx;
}

.tags {
  margin-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, .05);
  padding-top: 30rpx;
  width: 100%;
  min-height: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  height: 35rpx;
  line-height: 35rpx;
  padding: 0 10rpx;
  position: relative;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  border-radius: 2rpx;
  color: #fff;
}

.tag>.iconfont {
  margin-right: 24rpx;
}

.tag-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: .15;
  left: 0;
  top: 0;
  z-index: -1;
  border-radius: 4rpx;
}

.tag-add {
  width: 150rpx;
  background-color: rgba(255, 255, 255, .1);
  border-radius: 4rpx;
}

.tag-add input {
  height: 100%;
  width: 100%;
}

.tag-delete {
  height: 32rpx;
  width: 32rpx;
  line-height: 100%;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: -22rpx;
  transform: translate(50% , -50%)
}

.detail>view>.iconfont {
  margin-right: 18rpx;
}

.detail>view {
  margin-top: 30rpx;
}

.edit {
  position: absolute;
  bottom: 0;
  right: 0;
}

.edit>.iconfont {
  font-size: 18rpx;
  transform: rotate(-90deg);
  margin-left: 16rpx;
}

.list-common {
  z-index: 4;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
}

.dynamics-user {
  box-sizing: border-box;
  padding: 40rpx 32rpx;
}

.dynamics-user-layout {
  border-left: 1rpx dotted #000;
}

.dynamics-user-item {
  box-sizing: border-box;
  padding-bottom: 32rpx;
  padding-left: 32rpx;
}

.dynamics-user-item:last-child {
  padding-bottom: 0;
}

.dynamics-user-time {
  box-sizing: border-box;
  padding-bottom: 28rpx;
  position: relative;
}

.dot {
  height: 12rpx;
  width: 12rpx;
  position: absolute;
  left: -37rpx;
  top: 8rpx;
  background-color: #000;
  border-radius: 50%;
  z-index: 99;
}

.dot>view {
  height: 100%;
  width: 100%;
  opacity: .3;
  box-shadow: 0 0 0 4rpx #000;
  border-radius: 50%;
}


.dynamics-user-item:first-child>.dynamics-user-time::before {
  content: "";
  height: 20rpx;
  width: 10rpx;
  position: absolute;
  left: -38rpx;
  top: -10rpx;
  background-color:#fff;
  z-index: 10;
}

.dynamics-user-item:last-child>.dynamics-user-time::after {
  content: "";
  height: 500rpx;
  width: 10rpx;
  position: absolute;
  left: -38rpx;
  top: 10rpx;
  background-color:#fff;
  z-index: 10;
}

.dynamics-user-content {
  line-height: 42rpx;
}

.important, .important>view {
  display: inline-block;
}

.ai {
  box-sizing: border-box;
  position: relative;
  width: 100%;
}

.echelon-item {
  overflow: hidden;
}

.echelon-label {
  position: relative;
  text-align: center;
}

.echelon-label>view {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  z-index: -1;
  background-color: #000;
  color: #000;
  opacity: .18;
}

.echelon-item {
  box-sizing: border-box;
  padding: 0 80rpx;
}

.echelon-item:nth-child(1) {
  height: 180rpx;
  margin-bottom: -24rpx;
}
.echelon-item:nth-child(2) {
  height: 120rpx;
  margin-bottom: -10rpx;
}
.echelon-item:nth-child(3) {
  height: 90rpx;
}

.echelon-item:nth-child(1)>.echelon-label {
  width: 354rpx;
  height: 180rpx;
  line-height: 180rpx;
}

.echelon-item:nth-child(2)>.echelon-label {
  width: 234rpx;
  line-height: 120rpx;
}

.echelon-item:nth-child(3)>.echelon-label {
  width: 140rpx;
  line-height: 90rpx;
}

.echelon-item:nth-child(1)>.echelon-label>view {
  transform: perspective(354rpx) rotateX(-45deg);
  top: 12rpx;
}

.echelon-item:nth-child(2)>.echelon-label>view {
  transform: perspective(234rpx) rotateX(-45deg);
  top: 8rpx;
}

.echelon-item:nth-child(3)>.echelon-label>view {
  transform: perspective(140rpx) rotateX(-45deg);
  top: 6rpx;
}

.echelon-item>.echelon-num::before {
  content: "";
  height: 1rpx;
  background-color: #ccc;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.echelon-item:nth-child(1)>.echelon-num::before {
  width: 110rpx;
  left: -120rpx;
}

.echelon-item:nth-child(2)>.echelon-num::before {
  width: 153rpx;
  left: -163rpx;
}

.echelon-item:nth-child(3)>.echelon-num::before {
  width: 196rpx;
  left: -206rpx;
}

.user-info{
  padding: 0 100rpx;
  font-size: 26rpx;
  color: #333;
}
.user-info>text:first-of-type{
  padding-right: 120rpx;
}

.holder {
  height: 98rpx;
}

.btns {
  height: 98rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 666;
}

.btns>view {
  height: 80rpx;
  box-sizing: border-box;
  border-right: 1rpx solid rgba(255, 255, 255, .2);
  position: relative;
}

.btns>view>.iconfont {
  display: block;
  margin-right: 16rpx;
}

.btns>view:last-child {
  border-right: 0;
}

.input-view {
  border-radius: 10rpx;
  box-sizing: border-box;
  position: fixed;
  left: 50%;
  top: 15%;
  transform: translateX(-50%);
  width: 600rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  z-index: 999;
  overflow: hidden;
  padding-bottom: 60rpx;
  transition: .3s;
  opacity: 1;
}

.input-view-hide {
  top: 0;
  transform: translate(-50%, -100%);
  opacity: 0;
}

.input-view-cover {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100vw;
  background-color: rgba(0, 0, 0, .4);
  z-index: 888;
}

.input-view-title {
  width: 100%;
  font-size: 28rpx;
  line-height: 100%;
  color: #fff;
  background-color: #ff9b1f;
  height: 90rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.input-view-layout {
  box-sizing: border-box;
  height: 280rpx;
  width: 560rpx;
  border: 1rpx solid #f0f0f0;
  background-color: #fafafa;
  border-radius: 4rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}

.input-view-layout>textarea {
  height: 100%;
  width: 100%;
  font-size: 26rpx;
  line-height: 38rpx;
  color: #666;
}

.input-view-btn {
  height: 72rpx;
  width: 194rpx;
  margin: 0;
  padding: 0;
  border-radius: 10rpx;
  line-height: 72rpx;
  text-align: center;
}

.input-view-more {
  width: 560rpx;
  padding: 50rpx 0;
}

.input-view-more-lebal {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.input-view-picker {
  width: 560rpx;
  margin-bottom: 52rpx;
  height: auto;
  opacity: 1;
  transition: .3s
}

.input-view-picker-hide {
  width: 560rpx;
  margin-bottom: 0;
  height: 0;
  opacity: 0;
}

.input-view-picker .picker {
  width: 270rpx;
  height: 70rpx;
  border: 1rpx dotted #ebebeb;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  white-space: nowrap;
  flex-wrap: nowrap;
}

.msg-total {
  position: absolute;
  height: 22rpx;
  width: 22rpx;
  line-height: 22rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #f00;
  border-radius: 50%;
  right: 54rpx;
  top: 18rpx;
  z-index: 777;
}

