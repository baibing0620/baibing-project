page{
    background: #f7f7f7;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.container {
    margin: 0 24rpx 10rpx;
    background: #fff;
    border-radius: 10rpx;
    border: 1rpx solid #e6e6e6;
}

.revover-type {
    width: 114rpx;
    height: 40rpx;
    color: #fff;
    border-top-left-radius: 25rpx;
    border-bottom-left-radius: 25rpx;
    text-align: center;
    line-height: 40rpx;
}

.show {
    background: #ff9b1f;
}

.hide {
    background: #d9d9d9;
}

.img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.c-main {
    color: #ff9b1f;
}

