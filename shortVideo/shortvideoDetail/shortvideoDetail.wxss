page {
    background-color: black;
    height: 100%;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.container {
    height: 100vh;
}

.layout {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.item {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.buttons {
    height: 130rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #3e5169;
}

.buttons>.btn {
    height: 100%;
    position: relative;
    color: #536f91;
}

.like::after {
    content: "";
    position: absolute;
    width: 1rpx;
    height: 100rpx;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    background-color: #3b597b;
}

.buttons .iconfont {
    font-size: 48rpx;
    color: #fff;
    margin-right: 20rpx;
}

.remind {
    height: 88rpx;
    width: 100%;
    color: #536f91;
}

.videoImageBox {
    height: 480rpx;
    width: 480rpx;
    border-radius: 8rpx;
    overflow: hidden;
    position: relative;
}

.videoImage {
    height: 100%;
    width: 100%;
    position: relative;
}

.videoImage::after {
    content: "";
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, .2);
}

.videoImageLoading {
    height: 38rpx;
    width: 38rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.buttons .hasLiked {
    color: #ff9b1f;
}

.hasLiked .iconfont {
    color: #ff9b1f;
}

.shareView {
    height: 218rpx;
    width: 100vw;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #fff;
    transition: .3s;
}

.shareView::after {
    content: "";
    width: 1rpx;
    height: 120rpx;
    background-color: #f0f0f0;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.shareItem {
    width: 296rpx;
    height: 176rpx;
    line-height: 100%;
    padding: 0;
    border-radius: 0;
    margin: 0;
    background-color: white;
}

.shareItem>image {
    height: 60rpx;
    width: 60rpx;
    margin-bottom: 18rpx;
}

.hideShare {
    transform: translateY(100%);
}

.view {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    vertical-align: middle;
    background-color: red;
}

.card-list {
    line-height: 26rpx;
    padding: 26rpx 30rpx;
    width: 300rpx;
}

.operation {
    position: fixed;
    right: 0;
    bottom: 100px;
    width: 150rpx;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.operation-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
}
.item-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    height: 80rpx;
    background-color: rgba(0,0,0,0.7);
    border-radius: 50%;
}
.item-text {
    margin-top: 10rpx;
    font-size: 20rpx;
}
.item-iconfont {
    font-size: 48rpx;
    color: white;
}

.comment-dialog {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 70%;
    border-radius: 20rpx 20rpx 0 0;
    background-color: white;
    z-index: 99;
}
.comment-dialog-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    height: 50px;
    width: 690rpx;
    font-size: 34rpx;
}
.comment-dialog-head .iconfont {
    font-size: 34rpx;
}
.comment-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    border-top: 1px solid #E6E6E6;
}

.search-goods {
    background: #F5F5F5;
    border-radius: 25px;
    font-size: 14px;
    height: 80rpx;
    color: rgba(255,255,255,0.4);
    width: 550rpx;
    box-sizing: border-box;
    padding-left:30rpx;
}
  .search-goods input{
      margin-left: 10rpx;
    height: 55rpx;
    line-height: 55rpx;
    color: #fff;
    font-size: 24rpx;
  }
  .iconfont {
      font-size: 36rpx
  }

  .comment-show {
      display: none;
  }

  .comment-info {
      display: flex;
      margin-bottom: 10px;
      min-height: 100rpx;
  }
  .comment-content {
      margin-left: 20rpx;
      display: flex;
      flex-direction: column;
  }
  .comment-nickname {
      color: #FF9B1F;
      font-size: 28rpx;
  }
  .comment-comment {
    font-size: 30rpx;
}
.comment-time {
    color: #999999;
    font-size: 22rpx;
}

.video-goods {
    padding: 0 10rpx;
    position: absolute;
    left: 10rpx;
    bottom: 100px;
    display: flex;
    align-items: center;
    width: 400rpx;
    height: 150rpx;
    border-radius: 15rpx;
    background-color: white;
}
.video-goods-content {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100rpx;
}
.goods-name {
    font-size: 28rpx;
}
.goods-price {
    color: #FF3600;
    font-size: 24rpx;
}
.icon-xie {
    color: black;
}


