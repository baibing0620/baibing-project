page{
    background: #fff;
    padding-bottom: 100rpx;
}
.container{
    padding: 40rpx 30rpx;
    border-bottom: 10rpx solid #f0f0f0
}
.fr24,.fr28{
    line-height: 100%
}
.add-recover-match{
    margin-top: 30rpx;
}
.add-recover-match>view,.key-match{
    width: 210rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
    background: #f7f7f7;
    border: 1rpx solid #e6e6e6;
    text-align: center;
}
.add-recover-match>view:first-of-type{
    margin-right: 30rpx; 
}
.key-match{
    margin-top: 30rpx;
}
.bc-main{
    background: #ff9b1f !important;
    border:1rpx solid #ff9b1f !important;
    color: #fff;
}
.tag{
    padding: 22rpx;
    background: #fff0de;
    color: #ff9b1f;
    border-radius: 4rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
}
.textarea-view {
  box-sizing: border-box;
  height: auto;
  width: 100%;
  padding: 28rpx 30rpx;
  background-color: #f7f7f7;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
}

.textarea-view>textarea {
  width: 100%;
  color: #333;
  line-height: 46rpx;
  font-size: 28rpx;
  height:206rpx;
}

.font-normal {
  font-weight: normal;
}
.message-btn{
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  background-color: #ff9b1f;
  position:fixed;
  bottom:0;
  width: 100%;
}
.avatar {
  box-sizing: border-box;
  width: 226rpx;
  height: 227rpx;
  background-color: #f7f7f7;
  border: 1rpx solid #d9d9d9;
}

.avatar>image {
  width: 100%;
  height: 100%;
}

.avatarDefalt {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  line-height: 24rpx;
}

.avatarIcon {
 font-weight:bold;
font-size:50rpx;
line-height:226rpx;
color:#999;
}
.imgError {
  box-sizing: border-box;
  height: 100%;
  color: #f00;
  padding: 18rpx;
}

.progress-view {
  padding: 18rpx;
  box-sizing: border-box;
  margin-top: 50%;
  transform: translateY(-50%);
}
.tag-content-default{
	background: #f7f7f7;
	color: #999999;
	border: 1rpx solid #e6e6e6;
}
.my-tag{
	padding: 0 40rpx;
	box-sizing: border-box;
	height: 60rpx;
	border-radius: 50rpx;
	margin: 0 15rpx 30rpx;
}
button[disabled]:not([type]){
    background: #ff9b1f;
}
.user-tag-del{
    position: absolute;
    right: -26rpx;
    top: -26rpx;
    padding: 10rpx;
}
.tag-color{
	color: #ff9b1f;
}