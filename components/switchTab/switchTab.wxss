@import "/iconfont/iconfont.wxss";

.box {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex; 
  position: sticky;
  top: 0;
  z-index: 100;
  transition: .1s;
}

.layout {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
}

.item {
  flex: 1;
  transition: .1s;
  z-index: 888;
  display: flex;
  align-items: center;
}

.label {
  width: 100%;
  box-sizing: border-box;
  line-height: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center
}

.label>.iconfont {
  line-height: 26rpx;
  font-size: 18rpx;
  margin-left: 14rpx;
  font-weight: normal;
}

.item>.label {
  border-right: 1rpx solid #dbdbdb;
}

.item:last-child .label {
  border-right: 0;
}

.item-normal {
  color: #666;
  font-size: 26rpx;
}

.item-switch {
  color: black;
  font-size: 26rpx;
  font-weight: bold;
}

.switch-line {
  display: flex;
  justify-content: center;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 0; 
  overflow: hidden;
  transition: .3s;
}

.switch-line>view {
  font-size: 26rpx;
  height: 10rpx;
  overflow: hidden;
  background-color: #000;
  transition: .5s;
  padding: 10rpx 0;
}

.shadow {
  box-shadow: 0 5rpx 8rpx 0rpx rgba(0, 0, 0, .1);
}

.borderBottom {
  border-bottom: 1rpx solid #e6e6e6;
}
