@import '/iconfont/iconfont.wxss';
@import '/comm/base.wxss';
.card {
    width: 680rpx;
    height: 400rpx;
    background-color: #FFFFFF;
    position: relative;
    box-shadow: 0rpx 3rpx 25rpx 0rpx rgba(42, 53, 66, 0.12);
    border-radius: 20rpx;
    overflow: hidden;
}

.card-info-layout {
    width: 390rpx;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
}

.card-avatar {
    height: 100%;
    width: 350rpx;
    overflow: hidden;
    clip-path: polygon(100% 0, 290rpx 100%, 0 100%, 0 0);
    position: absolute;
    left: 0;
    top: 0;
    border-radius: 20rpx 0 0 20rpx;
}

.card-to-list {
    height: 52rpx;
    width: 52rpx;
    background-color: rgba(255, 255, 255, .6);
    border: 1rpx solid rgba(235, 166, 36, .6);
    border-radius: 50%;
    box-sizing: border-box;
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}

.card-to-list-icon {
    background-image: linear-gradient(90deg, #1F94FD 0%, #16B1FF 100%);
    -webkit-background-clip: text;
    color: transparent;
}

.card-info-company-layout {
    justify-content: flex-end;
    padding-right: 36rpx;
    height: 74rpx;
}

.card-info-logo {
    height: 34rpx;
    width: 34rpx;
}

.card-info-company {
    max-width: 256rpx;
    font-size: 22rpx;
    line-height: 34rpx;
    padding-left: 12rpx;
    box-sizing: border-box;
}

.card-info-name-bc {
    width: 100%;
    height: 136rpx;
    background-color: rgba(60, 88, 158, 0.06);
    box-sizing: border-box;
    padding-left: 84rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    clip-path: polygon(100% 0, 100% 100%, 34rpx 100%, 54rpx 0);
}

.card-info-name {
    line-height: 70rpx;
}

.card-info-position {
    line-height: 32rpx;
}

.card-info-others {
    padding-right: 12rpx;
    padding-top: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.card-info-others-item {
    margin-top: 6rpx;
    display: flex;
    justify-content: right;
}

.card-info-others-item:first-child {
    margin-top: 0;
}

.card-info-others-item-label {
    line-height: 30rpx;
    max-width: 290rpx;
    text-align: right;
}

.card-info-others-item-icon {
    width: 38rpx;
    text-align: center;
    line-height: 30rpx;
    color: #D5D7DF;
}