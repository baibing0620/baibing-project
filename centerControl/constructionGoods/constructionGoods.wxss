page{
    background: #fff;
    padding-bottom: 100rpx
}
.container{
    padding:  0 30rpx 30rpx;
    box-sizing: border-box;
}
.title{
    margin: 40rpx 0;
}
.textarea-placeholder {
  color: #b3b3b3;
  font-size: 28rpx;
}
textarea{
    width: inherit;
    height: 301rpx;
    border: 1rpx solid #d9d9d9;
    border-radius: 6rpx;
    background: #f7f7f7;
    padding: 30rpx;
    box-sizing: border-box;
}

.img-box {
  margin-bottom: -6rpx;
  overflow: hidden;
}

.img {
  float: left;
  box-sizing: border-box;
  border: 1rpx solid #d9d9d9;
  border-radius: 4rpx;
  background-color: #f7f7f7;
  overflow: hidden;
  transition: .3s;
}

.img>image {
  height: 100%;
  width: 100%;
}

.img-add {
  text-align: center;
}

.img-add>i {
  font-weight: bold;
  font-size: 50rpx;
  line-height: 226rpx;
  color: #999;
}

.img1 {
  width: 690rpx;
  height: 340rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.img1:last-child {
  margin-bottom: 6rpx;
}

.img2 {
  width: 226rpx;
  height: 226rpx;
  margin-bottom: 6rpx;
}
.img2:not(:nth-of-type(3n)){
   margin-right: 6rpx;
}
.img-add1 {
  height: 226rpx;
}
.btn {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.btn>button:first-of-type {
    color: #ff9b1f;
    background: #fff5e8;
    border-top: 1rpx solid #ff9b1f;
}

.btn>button:last-of-type {
    background: #ff9b1f;
    color: #fff;
}

.btn>button {
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 0;
}
