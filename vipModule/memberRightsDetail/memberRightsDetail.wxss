.container{
  width: 750rpx;
  height: 1496rpx;
  background: #f7f7f7;
}
.switcher{
position: relative;
height: 260rpx;
overflow: hidden;
background: linear-gradient(-90deg, #F3CB86 0%, #DCB268 100%);
}

.triangle{
  position: absolute;
  left: 50%;
  bottom: -16rpx;
  width: 0;
  height: 0;
  border: 16rpx solid #fff;
  transform: translate( -50% ) rotate(45deg);

}
.swiper{
height: 260rpx!important;
}

