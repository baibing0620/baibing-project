page{
    background-color: #f5f5f5;
    padding-bottom: 100rpx;
}
.search-box {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.search-goods {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 25px;
    font-size: 14px;
    height: 60rpx;
    color: rgba(255, 255, 255, 0.4);
    width: 690rpx;
    padding: 0 40rpx;
}
.goodsList{
    width: 100%;
    height: 230rpx;
    border-bottom: 1rpx solid #ebebeb;
    box-sizing: border-box;
    padding: 29rpx 22rpx 30rpx 0;
    display: flex;
    background-color: #fff;
    /* justify-content: flex-start;
    align-items: center; */
}
/** 多选radio **/
.biggerBox{
    width: 90rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.checkBox {
    box-sizing: border-box;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 1rpx solid #ccc;
    background-color: #fafafa;
    /* margin-right: 30rpx; */
    font-size: 36rpx;
    color: #ff9b1f;
}

.checkBox-selected {
    border: 0;
}

.desWords{
    width: 300rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.desWordsTitle{
    font-size: 28rpx;
    color: #333
}
.desWordsType{
    font-size: 26rpx;
    color: #333
}
.preview{
    width: 108rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}
.flag {
    width: 104rpx;
    height: 34rpx;
    background: #ff641f;
    border-bottom-right-radius: 17rpx;
    position: absolute;
    top: 0;
}
.previewContent{
    width: 108rpx;
    height: 50rpx;
    border-radius: 4rpx;
	border: solid 1rpx #cccccc;
    text-align: center;
    line-height: 47rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
}
.saveBtn{
    width: 100%;
    height: 98rpx;
    border-radius: 0;
    position: fixed;
    left: 0;
    bottom: 0;
    color: #fff
}
.bgBtn{
    background-color: #1F94FD !important;
}
.bgBtnDis{
    background-color: #cccccc !important;
    border: 0
}