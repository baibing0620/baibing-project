/* centerControl/marketFruitMachine/marketFruitMachine.wxss */

page {
    background: #0d095d;
}

/* page header*/

.header {
    position: relative;
    width: 750rpx;
    height: 1230rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/b0e17a2639c045e9.jpg') no-repeat;
    background-size: 100%;
}

.header-title {
    position: absolute;
    top: 170rpx;
    left: 0;
    width: 100%;
    text-align: center;
    color: #eed0ff;
    font-size: 36rpx;
    font-weight: 600;
    /*text-shadow: 0 0 5px rgba(0, 0, 0, .5);*/
}
.share-board{
    position: relative;
    margin: 0 auto;
    width: 640rpx;
    padding: 60rpx 0 40rpx;
    border-radius: 30rpx;
    background: #3234a2;
    border: solid #5428ba 5px;
    box-shadow: 0 0 20px rgba(255, 255, 255, .7) inset;
    margin-bottom: 76rpx;
}

.share-num{
    color: #8BE2FF !important;
}

.share-btn{
    background:linear-gradient(0deg,#FF4B2B,#FF416C) !important;
}

.content-box {
    position: relative;
    margin: 0 auto;
    width: 640rpx;
    min-height: 300rpx;
    border-radius: 30rpx;
    background: #3234a2;
    border: solid #5428ba 5px;
    box-shadow: 0 0 20px rgba(255, 255, 255, .7) inset;
}

.content-box:first-of-type {
    margin-top: 54rpx;
}

.content-box:last-child {
    margin-top: 62rpx;
}

.content-box-header, .winner-list-header {
    position: absolute;
    top: -36rpx;
    left: calc( 50% - 170rpx);
    width: 340rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 29rpx;
    color: #fff;
    font-weight: 600;
    text-align: center;
    border-radius: 40rpx;
    background: #3234a2;
    box-shadow: 0 0 20px rgba(255, 255, 255, .7) inset, 0 0 10px rgba(0, 0, 0, 1);
}

.description-container {
    padding: 70rpx 27rpx 30rpx;
    font-size: 28rpx;
    line-height: 1.7em;
    color: #fff;
}

/* winner list */

.winner-list {
    padding: 40rpx 0;
    padding-top: 60rpx;
    min-height: 126rpx;
}

.winner-list-item-header {
    margin-top: 25rpx;
    margin-bottom: 30rpx;
    color: #fff;
    font-size: 30rpx;
}

.winner-list-item {
    margin-bottom: 26rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 1px;
}

/* fruit  */

.fruitMachine-container {
    position: absolute;
    top: 454rpx;
    left: 12.375%;
    margin: 0 auto;
    width: 75.5%;
    flex-wrap: wrap;
}

.fruitMachine-container .fruit-item, .fruitMachine-container .fruit-item-btn {
    position: relative;
    width: 170rpx;
    height: 140rpx;
    margin-top: 25rpx;
    background: #20a6d2;
    border-radius: 8rpx 8rpx 30rpx 30rpx;
    transition: .1s;
}

.fruitMachine-container .fruit-item.active {
    background: #c02d32;
}

.fruit-item-title {
    font-size: 26rpx;
    font-weight: 500;
    letter-spacing: 1rpx;
    color: #1a1b8d;
    text-align: center;
}

.fruitMachine-container .fruit-item .glass {
    position: absolute;
    left: calc( -102rpx + 85rpx);
    top: calc( -87rpx + 70rpx);
    width: 204rpx;
    height: 174rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/7ec940311b1c7ffd.png') no-repeat;
    background-size: 100%;
}

.fruit-item-image {
    margin: 12rpx 0 0 35rpx;
    width: 100rpx;
    height: 60rpx;
}

.fruitMachine-container .fruit-item:nth-child(1), .fruitMachine-container .fruit-item:nth-child(2), .fruitMachine-container .fruit-item:nth-child(3) {
    margin: 0;
}

.fruitMachine-container .fruit-item-btn {
    position: relative;
    top: 10rpx;
    margin: 0;
    width: 164rpx;
    height: 164rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/24fa1e0310da58d0.png') no-repeat;
    background-size: 100%;
}

.fruitMachine-container .fruit-item-btn text {
    display: block;
    text-align: center;
    color: #fff;
}

.num-tip{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 260rpx;
}

.Sharing {
    width: 122rpx;
    height: 138rpx;
    background-image: url('https://facing-1256908372.file.myqcloud.com//image/20191118/7bda7a6ec294692c.png');
    background-size: 100%;
    position: fixed;
    top: 50%;
    margin-top: -130;
    right: 0;
    z-index: 999;
}

.ShareToWechat {
    width: 750rpx;
    height: 356rpx;
    background-color: #ffffff;
    border-radius: 30rpx 30rpx 0px 0px;
    position: fixed;
    bottom: 0;
    z-index: 1000;
}

.weixin {
    width: 140rpx;
    height: 154rpx;
    text-align: center;
    position: relative;
}

.shareButton {
    opacity: 0;
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 0;
}

.ShareToWechat-box {
    height: 100%;
    z-index: 1001;
}

.shareTitle {
    font-size: 28rpx;
    font-weight: bold;
    letter-spacing: 1px;
    color: #000000;
    font-family: PingFangSC-Regular;
}

.pengyouquan {
    width: 120rpx;
    height: 152rpx;
    text-align: center;
}

.pengyouquan view {
    color: #000000;
}

.weixin view {
    color: #000000;
}

.weixin image {
    width: 98rpx;
    height: 98rpx;
}

.pengyouquan image {
    width: 98rpx;
    height: 98rpx;
}

.mcl {
    width: 100%;
    height: 100vh;
    position: fixed;
    z-index: 999;
    background-color: rgba(0, 0, 0, .6);
}

.fix-home-page {
    position: absolute;
    top: 20px;
    right: 20rpx;
    background: rgba(0, 0, 0, 0.5);
    z-index: 100;
    border-radius: 50rpx;
    color: white;
    height: 70rpx;
    min-width: 70rpx;
    line-height: 70rpx;
}

.fix-audioPlayer {
    position: absolute;
    top: 140rpx;
    right: 20rpx;
    z-index: 100;
}

.resultContainer {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, .6);
    z-index: 1000;
    align-items: center;
}

.resultBox {
    width: 610rpx;
    height: 240rpx;
    border-radius: 40rpx;
    background: url("https://facing-1256908372.file.myqcloud.com//image/20191127/05c322c4582874c0.png") no-repeat center center;
    background-size: 600rpx 238rpx;
    color: #fff;
    letter-spacing: 1rpx;
    margin-top: 300rpx;
    align-items: center;
}

.resultInfo {
    width: 80%;
    text-align: center;
}