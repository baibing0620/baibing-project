page {
    background-color: #F7F7F7;
}

.fr24, .fr26, .fr28, .fr30, .fr50 {
    line-height: 100%;
}

.list {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 30rpx
}

.item {
    width: 690rpx;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    box-sizing: border-box;
}

.item:last-child {
    margin-bottom: 0;
}

.top {
    border-bottom: 1rpx solid #f5f5f5;
    height: 104rpx;
    padding: 0 30rpx;
}

.avatar {
    height: 60rpx;
    width: 60rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.middle {
    height: 226rpx;
}

.middle .iconfont {
    margin-left: 10rpx;
}

.money {
    margin-bottom: 32rpx;
}

.bottom {
    height: 84rpx;
    padding: 0 30rpx;
    border-top: 1rpx solid #f5f5f5;
}

.dialog {
    width: 600rpx;
    padding: 60rpx 40rpx 90rpx 40rpx;
    box-sizing: border-box;
}

.dialog-this-title {
    margin-bottom: 60rpx;
}

.dialog-this-subTitle {
    margin-bottom: 20rpx;
}

.dialog-this-formula {
    line-height: 46rpx;
    margin-bottom: 20rpx;
}

.cred {
    color: red;
}