/* pages/poolDetail/poolDetail.wxss */
page {
  background-color: #fff;
  font-family: 'Microsoft YaHei';
}

.fr24, .fr28, .fr30, .fr34, .fr32, .fr36, .fr40 {
  line-height: 100%;
}

.cblue {
  color: #3870b3;
}

.cblue2 {
  color: #29aeff;
}

.color1 {
  color: #ec81f0;
}

.color2 {
  color: #f0c281;
}

.color3 {
  color: #73e175;
}

.color4 {
  color: #4fd8f2;
}

.color5 {
  color: #ff7e93;
}

.color6 {
  color: #8e98fb;
}

