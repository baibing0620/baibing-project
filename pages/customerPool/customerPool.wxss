.customerPool{
  border-bottom: 1rpx solid #f2f2f2;
  margin: 20rpx 24rpx;
  padding: 20rpx 0;
  position: relative;
  display: flex;
}
.claim{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50rpx;
  position: absolute;
  right: 24rpx;
  bottom: 23rpx;
}
.allClaim{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  position: fixed;
  left: 5%;
  bottom: 30rpx;
}
.bullet{
  position: fixed;
  top: 0;
  background: rgba(0,0,0,.1);
  width: 100%;
  height: 100%;
  padding: 500rpx 0 0 0;
}
.bullet>view{
  background: #fff;
  margin: auto;
  width: 600rpx;
  border-radius: 10rpx;
  text-align: center;
  /* border-bottom: 1rpx solid #f2f2f2; */
}
.bullet>view>view:first-child{
  line-height: 180rpx;
}
.bullet>view>view:last-child{
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
}
.bullet>view>view:last-child>text{
  border-top: 1rpx solid #f2f2f2;
  width: 50%;
}
.bullet>view>view:last-child>text:first-child{
  border-right: 1rpx solid #f2f2f2;
}
