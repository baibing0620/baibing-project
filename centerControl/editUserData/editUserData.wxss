page {
  background-color: #fff;
  width: 100%;
}

.header {
  height: 180rpx;
  padding: 0 30rpx;
  border-bottom: 10rpx solid #f0f0f0;
}

.user-avator {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.fr24 {
  font-size: 24rpx;
}

.fr36 {
  font-size: 36rpx;
}

.order-form {
  min-height: 110rpx;
  padding: 10rpx 30rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.input-placeholder {
  color: #b3b3b3;
  font-size: 28rpx;
}


.textarea-placeholder {
  color: #b3b3b3;
  font-size: 28rpx;
}
.font-normal{
  font-weight: normal;
}
.order-form input {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  margin-left: 40rpx;
}
.order-form picker {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  margin-left: 40rpx;
}

textarea {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  margin-left: 80rpx;
  box-sizing: border-box;
  line-height: 30rpx;
}

.user-tag {
  padding: 40rpx 30rpx;
}

.user-tag>view:first-of-type {
  margin-bottom: 40rpx;
}

.fw600 {
  font-weight: 600;
}

.my-tag .text-box {
  padding: 20rpx;
  margin: 0;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 30;
  /* filter:Alpha(opacity=15); */
}

.my-tag .text-box .text-box-bc {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.15;
  z-index: 1;
  border-radius: 6rpx;
}

.my-tag .text-box>text {
  color: #666;
  /* opacity: 1; */
}

.tag-placeholder {
  font-size: 28rpx;
  color: #999;
}

.tag-input {
  width: 226rpx;
  height: 60rpx;
  border-radius: 2rpx;
  border: 1rpx solid #e9e9e9;
  font-size: 30rpx;
  color: #333;
  background-color: #f7f7f7;
  text-align: center;
  margin-bottom: 30rpx;
}

.save-btn {
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #fff;
}

.user-tag-del {
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  padding: 10rpx;
}

.info {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #b3b3b3;
  padding-top: 30rpx;
  padding-bottom: 40rpx;
}

.tags {
  padding-left:120rpx;
  padding-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.tag {
  height: 35rpx;
  line-height: 35rpx;
  padding: 0 10rpx;
  position: relative;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  border-radius: 2rpx;
  color: #fff;
}
.wx-switch-input{
width:84rpx !important;
height:46rpx !important;
}

.wx-switch-input::before{
width:80rpx !important;
height:42rpx !important;
}

.wx-switch-input::after{
width:40rpx !important;
height:40rpx !important;
}
