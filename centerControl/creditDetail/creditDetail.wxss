
.title {
    width: 750rpx;
	height: 90rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 2rpx 10rpx 0rpx 
		rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
}

.activeTab {
	line-height: 90rpx;
	font-size: 26rpx;
	color: #ff9b1f;
	position: relative;
}

.unchecked {
	color: #666666;
	font-size: 28rpx;
	line-height: 90rpx;
}

.activeTab::after {
	content: '';
	position: absolute;
	top: 90rpx;
	left: 50%;
	width: 135rpx;
	height: 2rpx;
	background-color: #ff9b1f;
	border-radius: 1rpx;
	transform: translateX(-50%);
}

.credit-detail {
	margin-top: 1rpx;
	padding-left: 30rpx;
	padding-right: 40rpx;
	height: 160rpx;
	background-color: #ffffff;
	border-bottom: 2rpx solid #f5f5f5;
}

.mt26 {
	margin-top: 26rpx;
}
