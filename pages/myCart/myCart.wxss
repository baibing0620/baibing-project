page {
	background-color: #ffffff;
}

.container1 {
	width: 100%;
	padding-bottom: 120rpx;
}

.shopping-list {
	width: 100%;
}

.container1 .shopping {
	background: white;
	/* margin-bottom: 10rpx; */
  	border-bottom: 10rpx solid #f3f6f5;
	padding: 30rpx 30rpx 30rpx 0;
}

.container1 image {
	height: 200rpx;
	width: 200rpx;
}

.container1 .shopping .goods-context {
	height: 200rpx;
	padding: 0 14rpx 0 28rpx;
}

.quantity>view {
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
}

.minus,
.plus {
	color: #ccc;
}

.plus {
	color: #ff3600;
}

.num {
	padding: 0 70rpx;
}
.selectAllBigger{
	width: 160rpx;
	height: 100%;
	display:flex;
	justify-content:center;
	align-items:center
}
.balance-accounts {
	line-height: 100rpx;
	z-index: 100;
	background: white;
	height: 100rpx;
	position: fixed;
	border-top: 1rpx solid #e1e1e1;
	border-bottom: 1rpx solid #e1e1e1;
	bottom: 0;
}

.balance-accounts>view {
	min-width: 180rpx;
	text-align: center;
	height: 100rpx;
}

.balance-accounts .pay-btn {
	width: 230rpx;
	color: white;
}

.clear {
	width: 116rpx;
	height: 48rpx;
	border: 1px solid #b3b3b3;
	color: #b3b3b3;
	border-radius: 4rpx;
	box-sizing: border-box;
}

/*2容器*/

.container2 {
	width: 100%;
	box-sizing: border-box;
	/* padding-bottom: 20rpx; */
	text-align: center;
  background: white;
}

.container2 .pic-cart {
	margin: 84rpx 25rpx 40rpx 0; 
	width: 211rpx;
	height: 174rpx;
}
.pic-line{
	width: 710rpx;
	height: 24rpx;
	margin: 0 auto;
	padding-bottom: 10rpx;
}
.container2 .butt {
	margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.container2 .butt>view {
	margin: 0 40rpx;
	height: 60rpx;
	width: 250rpx;
	line-height: 60rpx;
	border-radius: 6rpx;
	color: #fff;
}

.container2 .butt>view:first-of-type {
	height: 60rpx;
	line-height: 60rpx;
	box-sizing: border-box;
	color: #ff3600;
	border: 1rpx solid #ff3600;
	background: transparent;
}


.icon-gouwuche {
	margin-left: 30rpx;
	display: block;
	width: 240rpx;
	font-size: 120rpx;
	line-height: 120rpx;
	color: #999999;
}

.vip-tag {
	font-size: 18rpx;
	width: 70rpx;
	height: 28rpx;
	border-radius: 4rpx;
	text-align: center;
	line-height: 28rpx;
	background: #ffd151;
	color: #76390c;
	margin-bottom:6rpx;
}
