    margin-top: -45rpx;
}
.share-num{
   color: #FF3A8F !important;
}
.share-btn{
    background:linear-gradient(0deg,#F30E05,#FF446E) !important;
}
.content-box {
    position: relative;
    margin: 0 auto;
    margin-bottom: 85rpx;
    width: 680rpx;
    min-height: 380rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171206/cc0295e4fa3c981a.jpg') repeat-y;
    background-size: 100%;
    border: solid 10rpx #ff3e4f;
    border-radius: 40rpx;
}

.num-tip{
    font-weight: bold;
    position: absolute;
    top: 323rpx;
    left: 50%;
    transform: translateX(-50%);
}

.content-box:nth-child(1) {
    margin-top: -120rpx;
}

.content-box-header {
    position: absolute;
    top: -70rpx;
    left: 0;
    width: 100%;
    height: 150rpx;
    text-align: center;
    line-height: 112rpx;
    color: #fff;
    font-size: 34rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171206/efce0bd9cf786d18.png') no-repeat center;
    background-size: 72%;
}

.activity-content {
    padding: 24rpx 24rpx;
    padding-top: 88rpx;
    font-size: 28rpx;
    color: #fff;
    line-height: 1.7em;
    text-align: left;
}

.egg {
    margin-top: 40rpx;
    padding: 0 20rpx;
}

.egg-segment {
    position: absolute;
}

.egg-image {
    position: relative;
    width: 184rpx;
}

.put-bottom {
    top: 125rpx;
    left: 7rpx;
    width: 171rpx;
    height: 82rpx;
}

.egg-bottom {
    top: 51rpx;
    left: 0;
    width: 178rpx;
    height: 127rpx;
}

.egg-top {
    top: 0rpx;
    left: 33rpx;
    width: 118rpx;
    height: 75rpx;
}

.egg-splash {
    top: 16rpx;
    left: 37rpx;
    width: 125rpx;
    height: 128rpx;
    opacity: 0;
}

.egg-image.award .egg-splash {
    animation: egg-splash .4s ease-out 1 both;
}

@keyframes egg-splash {
    0% {
        -webkit-transform: translate(0, 0);
        transform: translate(0, 0);
        opacity: 0;
    }
    100% {
        -webkit-transform: translate(0, -40rpx);
        transform: translate(0, -40rpx);
        opacity: 1;
    }
}

.egg-image.animation .egg-top {
    animation: egg-break 1s ease-out 1 both;
}

@keyframes egg-break {
    0% {
        -webkit-transform: translate(0, 0);
        transform: translate(0, 0);
        opacity: 1;
    }
    100% {
        -webkit-transform: translate(0, -40rpx);
        transform: translate(0, -40rpx);
        opacity: 0;
    }
}

