/* pages/couponConsumptionCode/couponConsumptionCode.wxss */

.container {
  width: 100%;
  height: 100vh;
  background:#fff;
  box-sizing: border-box;

}
.imgBorder {
  width: 484rpx;
	height: 484rpx;
	border: solid 1rpx #e5e5e5;
  margin:0 auto;
  margin-top: 150rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.imgBorder> image{
  width: 460rpx;
	height: 460rpx;
  position: absolute;
  top:50%; 
  left:50%;
  transform: translate(-50%,-50%);
}

.infoTip {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ff9b1f;
  letter-spacing: 0rpx;
  font-weight: bold;
}

.modal-box {
    top: 0;
    position: fixed;
    z-index: 200;
    height: 100%;
    background: rgba(255, 255, 255,1);
}

.modal-image-qrcode{
    display: block;
    width: 622rpx;
    height: 622rpx;
}