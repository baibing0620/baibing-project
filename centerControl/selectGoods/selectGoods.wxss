page{
    background-color: #f5f5f5;
}
.search-box {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.search-goods {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 25px;
    font-size: 14px;
    height: 60rpx;
    color: rgba(255, 255, 255, 0.4);
    width: 690rpx;
    padding: 0 40rpx;
}
.goodsList{
    width: 100%;
    height: 230rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ebebeb;
    box-sizing: border-box;
    padding: 29rpx 22rpx 30rpx 29rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.desWords{
    width: 360rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.desWordsTitle{
    font-size: 28rpx;
    color: #333
}
.desWordsType{
    font-size: 26rpx;
    color: #333
}
.preview{
    width: 108rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}
.flag {
    width: 84rpx;
    height: 34rpx;
    background: #ff641f;
    border-bottom-right-radius: 17rpx;
    position: absolute;
    top: 0;
}
.previewContent{
    width: 108rpx;
    height: 40rpx;
    border-radius: 4rpx;
	border: solid 1rpx #cccccc;
    text-align: center;
    line-height: 38rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
}