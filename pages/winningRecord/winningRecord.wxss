/* pages/winningRecord/winningRecord.wxss */
page {
    background-color: #f7f7f7;
}

.container {
    width: 100%;
    box-sizing: border-box;
    padding-top: 88rpx;
   
}
.order-tab {
    position: fixed;
    top: 0;
    box-sizing: border-box;
    width: 100%;
    background: white;
    height: 90rpx;
    line-height: 88rpx;
    text-align: center;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.16);
    color: #666;
    z-index: 10;
    font-size: 28rpx;
}
.tabContainer {
  position: relative;
}
.tabContainer::after {
  content:'';
  position: absolute;
  right:0;
  top:50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 36rpx;
  background: #ccc;
}

.tabItem {
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  width: 136rpx;
}
.active-tab {
    border-bottom: 4rpx solid #1F94FD;
    /* padding-bottom: 16rpx; */
    color: #1F94FD;
    font-size: 28rpx;
}

.recordContainer {
  width: 100%;
  height: 208rpx;
	background-color: #fff;
  box-sizing: border-box;
  padding: 0 40rpx;
  margin-bottom: 10rpx;
  position: relative;
}
