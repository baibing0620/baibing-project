.container {
    width: 100%;
    height: 100vh;
    background: #fff;
    box-sizing: border-box;
}

.imgBorder {
    width: 484rpx;
    height: 484rpx;
    border: solid 1rpx #e5e5e5;
    margin: 130rpx auto 60rpx;
    position: relative;
}

.imgBorder> image {
    width: 460rpx;
    height: 460rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.infoTip {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #4d88ff;
    letter-spacing: 0rpx;
    font-weight: bold;
}

.mt106 {
    margin-top: 106rpx;
}

.mt24 {
    margin-top: 24rpx;
}

.triangle {
    width:589rpx;
    height: 1rpx;
    background: #e5e5e5;
    /* border: 1rpx solid #e5e5e5; */
    margin: 33rpx auto 0;
    position: relative;
}
.triangle::before{
    content: "";
    width: 12rpx;
    height: 12rpx;
    border:1rpx solid #e5e5e5;
    border-left:0px;
    border-top:0px;
    transform: rotate(45deg);
    position: absolute;
    top: -6rpx;
    background: #ffffff;
}