.fr24, .fr26, .fr32 {
    line-height: 100%;
}

.tabbar-layout {
    height: 90rpx;
}

.tabbar {
    height: 100%;
}

.tab-button {
    width: 237rpx;
    height: 100%;
    position: relative;
}

.tab-button::after {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1rpx;
    height: 38rpx;
    background-color: #e8e8e8;
}

.tab-button>.iconfont {
    margin-right: 12rpx;
}

.tab-item {
    font-size: 26rpx;
    color: #666;
    height: 100%;
    position: relative;
    transition: .1s;
}

.tab-item::after {
    content: "";
    height: 0;
    width: 0;
    background-color: #1F94FD;
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    transition: .3s;
}

.tab-item-selected {
    font-size: 28rpx;
    color: #1F94FD;
}

.tab-item-selected::after {
    content: "";
    height: 3rpx;
    width: 125rpx;
    background-color: #1F94FD;
}

.item {
    width: 690rpx;
    margin: 20rpx auto 0 auto;
    border-radius: 10rpx;
    box-sizing: border-box;
    border: 1rpx solid #e8e8e8;
}

.item-info-layout {
    height: 100rpx;
    border-bottom: 1rpx solid #e8e8e8;
    box-sizing: border-box;
    padding-left: 30rpx;
}

.item-more {
    height: 100%;
    width: 114rpx;
    position: relative;
}

.item-dot {
    height: 8rpx;
    width: 8rpx;
    border-radius: 50%;
    background-color: #999;
    position: relative;
}

.item-dot::before {
    content: "";
    height: 6rpx;
    width: 6rpx;
    border-radius: 50%;
    background-color: #999;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(-14rpx, -50%);
}

.item-dot::after {
    content: "";
    height: 6rpx;
    width: 6rpx;
    border-radius: 50%;
    background-color: #999;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translate(14rpx, -50%);
}

.avatar {
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    background-color: bisque;
    margin-right: 20rpx;
}

.item-content-layout {
    box-sizing: border-box;
    padding: 36rpx 30rpx 36rpx 30rpx;
}

.item-content {
    line-height: 56rpx;
}

.item-timeAndStatus {
    height: 45rpx;
    padding-right: 30rpx;
    border-radius: 45rpx;
    background-color: #ffebd2;
    display: inline-flex;
    margin-top: 22rpx;
    padding-left: 60rpx;
    color: #1F94FD;
    position: relative;
}

.item-timeAndStatus-completed {
    color: #fff;
    background-color: #d9d9d9;
}

.item-icon {
    height: 45rpx;
    width: 45rpx;
    border-radius: 50%;
    background-color: #1F94FD;
    left: 0;
    top: 0;
    font-size: 30rpx;
    position: absolute;
}

.item-icon-completed {
    background-color: #d9d9d9;
}

.item-menu {
    width: 200rpx;
    border-radius: 10rpx;
    background-color: rgba(0, 0, 0, .7);
    position: absolute;
    right: 20rpx;
    bottom: 16rpx;
    transform: translateY(100%);
    transition: .3s;
}

.item-menu-hide {
    animation: menuHide .3s;
    bottom: 26rpx;
    opacity: 0;
}

.item-menu-item {
    height: 90rpx;
    overflow: hidden;
    border-bottom: 1rpx solid rgba(255, 255, 255, .2);
    color: rgba(255, 255, 255, 1);
    position: relative;
    transition: .3s;
}

.item-menu-hide .item-menu-item {
    height: 0;
    color: rgba(0, 0, 0, .8);
}

.item-menu::after {
    content: "";
    width: 0;
    height: 0;
    border-left: 17rpx solid transparent;
    border-right: 17rpx solid transparent;
    border-bottom: 14rpx solid rgba(0, 0, 0, .7);
    position: absolute;
    right: 20rpx;
    top: -14rpx;
}

