page{
	background-color: #fff;
}
.img{
	width: 750rpx;
	height: 500rpx;
}
.img>swiper{
	width: 100%;
	height: 100%;
}
.slide-image{
	width: 100%;
	height: 100%;
}
.senior-title{
	margin: 30rpx 30rpx 30rpx 24rpx;
	line-height:58rpx;

}
.senior-title>view:first-of-type{
	
	margin-right: 68rpx;
}
.senior-intro{
/*	margin: 0 70rpx 0 24rpx;*/
	padding: 0 70rpx 40rpx 24rpx;
	box-sizing: border-box;
	line-height: 43rpx;
	border-bottom: 6rpx solid #f0f0f0;
}
.top-time{
	width: 87%;
	display: flex;
	border-bottom: 1rpx solid #e6e6e6;
}
.top-choose-date{
	white-space:nowrap;

}
.date-item{
	min-width: 116rpx;
	display: inline-block;
	margin-left: 10rpx;
	padding: 0 9rpx;
	position: relative;
	
}
.date-item-active{
	/*color: rgb(252,69,73);
	border-bottom: 2px solid rgb(252,69,73);*/
	width: 60rpx;
	height:4rpx;
	background-color: #ff9b1f;
	position: absolute;
	left:40rpx;
	bottom:0;
}
.date-item>view:first-of-type{
	text-align: center;
	height: 90rpx;
	line-height:  90rpx;

}
.calendar{
	position:absolute;
	top:0rpx;
	right:0rpx;
	z-index:1111;
	width: 100rpx;
	height: 98%;
	background-color: #fff;
	color: #ff9b1f;
	box-shadow: 0 0 20rpx rgba(0,0,0,.12);
}
.main-bottom>view:not(:last-child){
	border-bottom: 1rpx solid #e6e6e6;
}
.main-content{
	margin:32rpx 40rpx 0 24rpx;
	padding-bottom: 32rpx;
	box-sizing: border-box;


}
.shop-img{
	width: 150rpx;
	height: 150rpx;
}
.resevation-info{
	background-color: rgba(0,0,0,0.7);
	color: #fff;
	text-align: center;
	width: 100%;
	position: absolute;
	bottom: 0;
  height: 38rpx;
  line-height: 38rpx;
}
.content-itro{
	margin-left: 30rpx;
	height: 150rpx;
	width: 330rpx;
}
.reseva-btn{
	background-color: #fe5b36;
	width: 120rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #fff;
	border-radius: 50rpx;

}