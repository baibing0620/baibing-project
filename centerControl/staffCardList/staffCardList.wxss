page{
    background: #f5f5f5;
    padding-top:45px;
    box-sizing: border-box;
}
.container{
    width: 690rpx;
    background: #fff;
    height: 248rpx;
    border-radius: 20rpx;
    margin: 20rpx auto 0;
    border: 1rpx solid #e6e6e6;
    position: relative;
}
.container>image{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin: 0 40rpx;
}
.fr26{
    line-height: 100%;
}
.status{
    position: absolute;
    bottom: 0;
    right: 0;
    width: 140rpx;
    height: 50rpx;
    border-top-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    background: #ff9b1f;
    text-align: center;
    line-height: 50rpx;
}
.message-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
}
.message-btn button{
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 0;
    background-color: #ff9b1f;
}