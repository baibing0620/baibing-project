page {
  background-color: #fff;
}

.fr22, .fr24, .fr26, .fr28, .fr30 {
  line-height: 100%;
}

.avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 20rpx;
}

.item {
  box-sizing: border-box;
  overflow: hidden;
  width: 100vw;
  padding: 0 20rpx;
  background-color: #fff;
  padding-bottom: 30rpx;
}

.info {
  margin-top: 40rpx;
}

.title {
  height: 70rpx;
  line-height: 70rpx;
  margin-top: -20rpx;
  max-width: 610rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.createTime {
  height: 70rpx;
  line-height: 70rpx;
  margin-top: -20rpx;
}

.tag {
  margin-right: 10rpx;
  padding: 0 10rpx;
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  background-color: hsla(31, 100%, 55%, 0.2);
  color: #ff8e18;
  border-radius: 4rpx;
}

.label {
  margin-top: 24rpx;
  line-height: 70rpx;
  max-width: 710rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content {
  line-height: 50rpx;
  margin-bottom: 20rpx;
  display: block;
}

.picture {
  width: 100%;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: flex-start;
}

.picture2 {
  width: 470rpx;
}

.picture>image {
  background-color: #ccc;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  height: 230rpx;
  width: 230rpx;
}

.picture2>image:nth-child(2n+1) {
  margin-left: 0;
}

.picture3>image:nth-child(3n+1) {
  margin-left: 0;
}

.picture3>image:nth-last-child(-n+3) {
  margin-bottom: 0;
}

.picture2>image:nth-last-child(-n+2) {
  margin-bottom: 0;
}

.video {
  width: 710rpx;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.play {
  width: 710rpx;
  height: 400rpx;
  font-size: 100rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 3;
}

.videoLayout {
  width: 100%;
  height: 100%;
}

.video>image{
  width: 710rpx;
  height: 400rpx;
  background-color: #ccc;
}

.video-info {
  font-size: 24rpx;
  line-height: 100%;
  position: absolute;
  right: 20rpx;
  bottom: 24rpx;
  color: #fff;
}

.video-shadow {
  height: 0rpx;
  width: 710rpx;
  box-shadow: 0 0 80rpx 20rpx rgba(0, 0, 0, .7);
  position: absolute;
  bottom: 0;
  left: 0;
}

.button {
  height: 90rpx;
}

.button>view {
  position: relative;
  height: 90rpx;
}

.button>view::after {
  content: "";
  width: 1rpx;
  height: 30rpx;
  background-color: #d9d9d9;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%)
}

.button>view:last-child::after {
  content: "";
  width: 0;
}

.button .iconfont {
  font-size: 26rpx;
  margin-right: 12rpx;
  display: block;
}

.comment-item {
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
  padding: 0 20rpx;
  display: flex;
  position: relative;
  transition: .3s;
}

.comment-avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.comment-layout {
  width: 620rpx;
}

.comment-layout2 {
  height: 100%;
  box-sizing: border-box;
}

.comment-layout1 {
  margin-top: 56rpx;
}

.comment-title {
  margin-bottom: 23rpx;
}

.comment-content {
  line-height: 42rpx;
  margin-bottom: 14rpx;
  display: block;
}

.comment-time {
  padding-bottom: 20rpx;
}

.borderBottom {
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-avatar1 {
  margin-right: 20rpx;
  margin-top: 46rpx;
}

.comment-item2 {
  height: 130rpx;
}

.comment-more {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.comment-menu {
  background-color: rgba(0, 0, 0, .7);
  border-radius: 6rpx;
  width: 314rpx;
  position: absolute;
  transform: translateY(100%);
  bottom: 0;
  right: 0;
  opacity: 1;
  transition: .3s;
}

.comment-menu::after  {
  content: '';
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-bottom: 14rpx solid rgba(0, 0, 0, .7);
  position: absolute;
  transform: translateY(-100%);
  top: 0;
  right: 20rpx;
}

.comment-menu-item {
  height: 76rpx;
  position: relative;
  color: #fff;
  overflow: hidden;
  transition: .3s;
}

.comment-menu-item::after {
  content: '';
  background-color: #d9d9d9;
  height: 36rpx;
  width: 1rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.comment-menu-item:last-child::after {
  width: 0;
}

.comment-menu-hidden {
  opacity: 0;
}

.comment-menu-hidden .comment-menu-item {
  height: 0;
}

.inputViewBox {
  width: 100vw;
  height: 98rpx;
  left: 0;
  bottom: 0;
  position: fixed;
  z-index: 200;
}

.inputView {
  width: 100vw;
  height: 98rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e6e6e6;
  background-color: #fff;
  z-index: 201;
}

.input {
  box-sizing: border-box;
  margin-left: 20rpx;
  margin-right: 30rpx;
  width: 400rpx;
  background-color: #f7f7f7;
  border: 1rpx solid #e6e6e6;
  padding: 0 20rpx;
  height: 68rpx;
}

.icon-liuyan1 {
  margin-right: 10rpx;
}

.inputWidth {
  width: 520rpx;
  transition: .3s;
}

.relay, .thumbsUp {
  height: 60rpx;
  width: 120rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0;
  margin-left: 0;
}

.relay {
  color: #ccc;
  background-color: #f7f7f7;
  margin-right: 30rpx;
}

.hold {
  height: 10rpx;
  background-color: #f3f6f5
}

.holder {
  position: relative;
  height: 98rpx;
}

.marginright10 {
  margin-right: 8rpx;
}

.back {
  padding: 20rpx;
}

.commentToast {
  position: absolute;
  top: 0;
  font-size: 25rpx;
  left: 0;
  opacity: 0;
  width: 100vw;
  height: 52rpx;
  background-color: #fff3e4;
  color: #ff9b1f;
  z-index: 199;
  transition: .3s;
}

.commentToastShow {
  top: -52rpx;
  opacity: 1;
}

.comment-item-layout {
  position: relative;
  overflow: hidden;
}

.comment-item-layout::after {
  content: "";
  position: absolute;
  bottom: 0;
  right: 20rpx;
  height: 1rpx;
  width: 620rpx;
  background-color: #f0f0f0;
}

.comment-reply-layout {
  box-sizing: border-box;
  width: 620rpx;
  padding: 26rpx 24rpx 22rpx 24rpx;
  margin-left: 110rpx;
  border-radius: 8rpx;
  background-color: #f7f8fa;
  margin-bottom: 30rpx;
}

.comment-reply-info {
  margin-bottom: 22rpx;
  position: relative;
}

.comment-reply-username {
  color: #ff9b1f;
}

.comment-reply-text {
  display: block;
}

.comment-reply-textarea, .comment-reply-text {
  width: 100%;
  line-height: 40rpx;
  font-size: 24rpx;
}

.comment-reply-delete {
  position: absolute;
  padding: 0 30rpx;
  right: -30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #adafb2;
}

.comment-reply-textarea {
  min-height: 114rpx;
}

.comment-reply-time {
  padding-top: 22rpx;
}

.comment-reply-sending {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}


