.line{
	display: inline-block;  
	margin-left: 20rpx; 
	height: 7rpx;
	border-top:1rpx dashed #ccc;
}
.fr23{
	font-size: 23rpx;
}
.tag-color{
	color: #ff9b1f;
}
.tag-content{
	width: 200rpx;
	height: 60rpx;
	border-radius: 50rpx;
}
.tag-content:nth-of-type(n+4){
	margin-top: 30rpx;
}
.tag-content-default{
	background: #f7f7f7;
	color: #999999;
	border: 1rpx solid #e6e6e6;
}
.tag-content-choose{
	background: #ff9b1f;
	color: #fff;
}
.my-container{
	padding: 40rpx 15rpx;
	background: #fff;
	border: 1rpx solid #e6e6e6;
}
.my-tag{
	padding: 0 40rpx;
	box-sizing: border-box;
	height: 60rpx;
	border-radius: 50rpx;
	margin: 0 15rpx 30rpx;
}

.tag-placeholder {
    font-size: 28rpx;
    color: #ff9b1f;
}
.tag-button{
	/* background: #ff9b1f; */
	margin-top: 30rpx;
	border-radius: 0;
    position:fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
}
.user-tag-del{
    position: absolute;
    right: -26rpx;
    top: -26rpx;
    padding: 10rpx;
}
.info {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #b3b3b3;
  padding: 30rpx 14rpx 40rpx;
  padding-bottom: 40rpx;
}
.pc-tag-content {
    width: 200rpx;
    height: 60rpx;
    border-radius: 50rpx;
    line-height: 60rpx;
    text-align: center;
}
.pc-tag-content:nth-of-type(n+4){
	margin-top: 30rpx;
}