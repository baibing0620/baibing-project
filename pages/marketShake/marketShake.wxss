/* page header*/

.header {
    position: relative;
    width: 750rpx;
    height: 956rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/fa931d84f362b6f6.jpg') no-repeat;
    background-size: 100%;
}
.num-tip{
    height:52rpx;
    line-height: 52rpx;
    background:rgba(255,93,37,1);
    border-radius:10rpx;
    padding: 0 14rpx;
    position: absolute;
    top: 250rpx;
    left: 50%;
    transform: translateX(-50%);
}

.header-title {
    position: absolute;
    top: 236rpx;
    left: calc( 50% - 314rpx);
    width: 628rpx;
    height: 628rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/40452b0b54ec5e80.png') no-repeat;
    background-size: 100%;
    line-height: 1000rpx;
    text-align: center;
    color: #fddd62;
    font-size: 34rpx;
    font-weight: 600rpx;
}

.shake-image, .shake-image-shadow {
    position: absolute;
    top: 362rpx;
    left: calc( 50% - 185rpx);
    width: 370rpx;
    height: 370rpx;
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
}

.shake-image.animation, .shake-image-shadow.animation {
    animation: shake .35s linear 6;
    -webkit-transform-origin: 100% 100%;
    transform-origin: 100% 100%;
}

.shake-image-shadow.opacity2.animation {
    animation-delay: .1s;
}

.shake-image-shadow.opacity1.animation {
    animation-delay: .15s;
}

@keyframes shake {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    25% {
        -webkit-transform: rotate(10deg);
        transform: rotate(10deg);
    }
    75% {
        -webkit-transform: rotate(-10deg);
        transform: rotate(-10deg);
    }
    100% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
}

