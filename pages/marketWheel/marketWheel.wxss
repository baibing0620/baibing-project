/* page header*/

.header {
    position: relative;
    width: 750rpx;
    height: 1312rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171209/e5a2763079515aa1.jpg') no-repeat;
    background-size: 100%;
}

.header-title {
    position: absolute;
    top: 170rpx;
    left: 0;
    width: 100%;
    text-align: center;
    color: #eed0ff;
    font-size: 36rpx;
    font-weight: 600;
}

.share-board{
    position: relative;
    margin: 0 auto;
    width: 640rpx;
    margin-top: -110rpx;
    margin-bottom: 120rpx;
}

.share-btn{
    background:linear-gradient(0deg,#B631F1,#D777FF) !important;
}

.content-box {
    position: relative;
    margin: 0 auto;
    width: 640rpx;
    min-height: 300rpx;
}

.content-box-header, .winner-list-header {
    margin: auto;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 32rpx;
    color: #fff;
    text-align: center;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171209/e213aeee14a42522.png') no-repeat;
    background-size: 100%;
}

.description-container {
    padding: 70rpx 27rpx 30rpx;
    font-size: 28rpx;
    line-height: 1.7em;
    color: #fff;
}

.content-box:nth-of-type(1) {
    margin-top: -82rpx;
}

/* winner list */

.winner-list {
    padding: 40rpx 0;
    padding-top: 60rpx;
    min-height: 126rpx;
}

.winner-list-item-header {
    margin-top: 45rpx;
    margin-bottom: 35rpx;
    color: #fff;
    font-size: 30rpx;
}

.winner-list-item {
    margin-bottom: 30rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 1px;
}

/* wheel container */

.wheel-container {
    position: relative;
    width: 510rpx;
    height: 510rpx;
    top: 448rpx;
    margin: 0 auto;
}

.wheel-container .wheel {
    display: block;
    width: 100%;
    height: 100%;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171209/eab86d7751d8f31e.png') no-repeat;
    background-size: 100%;
}

.wheel-item-text {}

.wheel-container .wheel-pointer-container {
    position: absolute;
    width: 176rpx;
    height: 212rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    /* margin: -122rpx 0 0 -90rpx;
    transform-origin: 50% 50%; */
}

.wheel-container .wheel-pointer-container .wheel-pointer {
    position: absolute;
    width: 176rpx;
    height: 212rpx;
}
.wheel-container .wheel-pointer-container>view{
    position: absolute;
    bottom: 24rpx;
    left: 50%;
    transform: translateX(-50%);
    color: #6F3300;
    font-weight: bold;
}
.wheel-item {
    position: absolute;
    height: 80rpx;
