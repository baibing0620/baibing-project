page {
    background: #2f015b;
}

.header {
    position: relative;
    width: 750rpx;
    height: 988rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #fff;
    line-height: 446rpx;
    text-align: center;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/d0a8256293911604.jpg') no-repeat;
    background-size: 100%;
}

.splash {
    position: absolute;
    top: 302rpx;
    left: calc( 50% - 350rpx);
    width: 700rpx;
    height: 472rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171211/863408f63d717abf.gif') no-repeat;
    background-size: 100%;
}

.start-button {
    position: absolute;
    top: 814rpx;
    left: calc( 50% - 149rpx);
    width: 298rpx;
    height: 80rpx;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 78rpx;
    color: #fff;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/8fbb26282d8f56b7.png') no-repeat;
    background-size: 100%;
    opacity: .9;
}

.start-button.animation {
    animation: push-button .3s ease-out both;
}

@keyframes push-button {
    0%, 100% {
        -webkit-transform: translate(0, 0px);
        transform: translate(0, 0px);
    }
    75% {
        -webkit-transform: translate(0, 10px);
        transform: translate(0, 10px);
        opacity: 1;
    }
}

/* slot machine */

.slotMachine-window-shadow {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/d88c0c13a96c9225.png') no-repeat 100%;
}

.slotMachine-container {
    position: absolute;
    left: 90rpx;
    top: 355rpx;
    width: 76.5%;
    height: 34%;
}

.slotMachine-container .slotMachine-item {
    position: relative;
    margin-left: 3rpx;
    width: 64px;
    height: 99.9%;
    border-radius: 4rpx;
    overflow: hidden;
}

.slotMachine-container .slotMachine-item:first-child {
    margin-right: 0;
}

.slotMachine-container .slotMachine-item .slotMachine-item-slider {
    position: absolute;
    width: 64px;
    height: 170px;
    top: 0;
    left: 0;
}

.slotMachine-container .slotMachine-item .slotMachine-item-ele {
    width: 64px;
    height: 1024px;
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171208/d3084afddf664990.png') no-repeat;
    background-size: 100%;
}

.share-board {
    position: relative;
    margin: 0 auto;
    width: 640rpx;
    padding: 60rpx 0 40rpx;
    border-radius: 30rpx;
    background: #6124d1;
    border: solid #1e0635 5px;
    box-shadow: 0 0 20px rgba(255, 255, 255, .7) inset;
    margin-bottom: 76rpx;
