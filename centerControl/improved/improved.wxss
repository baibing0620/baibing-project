page {
  box-sizing: border-box;
  /* padding: 30rpx 28rpx 0 28rpx; */
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.item {
  width: 694rpx;
  height:77%;
  background-color: white;
  border-radius: 10rpx;
  position: absolute;
  left: 28rpx;
  top: 114rpx;
  overflow: hidden;
  box-shadow: 0 3rpx 25rpx 0 rgba(42, 53, 66, 0.12);
}
.item>view:not(:last-child){
  height:78.2%;
}

.item>view>image {
  height: 100%;
  width: 100%;
}

.add-img{
  height: 725rpx;
  width: 100%;
  background: #f7f7f7;
}

.add-img>view:nth-child(1){
    width: 224rpx;
    height: 224rpx;
    border:1rpx dashed #ccc;
}

.item:nth-child(1) {
  z-index: 13;
}

.item:nth-child(2) {
  z-index: 12;
}

.item:nth-child(3) {
  z-index: 11;
}

.info {
  margin-top: 1010rpx;
  text-align: center;
}

.btns {
  width: 100vw;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

.btn {
  text-align: center;
  line-height: 98rpx;
  position: relative;
  border-radius: 0;
}

