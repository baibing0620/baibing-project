/* content box */
.share-board{
    position: relative;
    margin: 0 auto;
    margin-bottom: 85rpx;
    width: 680rpx;
    padding: 60rpx 0 40rpx;    
    background: url('https://facing-1256908372.file.myqcloud.com//image/20171206/cc0295e4fa3c981a.jpg') repeat-y;
    background-size: 100%;
