page{
	background: #fff;
	padding-bottom: 60rpx;
  width: 100%;
}
.header-img{
	width: 100%;
	height: 148rpx;
	background: url(https://facing-1256908372.file.myqcloud.com//image/20180918/2079cb5b163444ec.png);
	background-size: cover;
}

.header-img image{
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
	margin-top: 20rpx;
	box-shadow: 0 6rpx 6rpx rgba(0,0,0,0.12); 
}
.cbless-primay{
	color: #ff3d3d;
}
.fr80{
	font-size: 80rpx;
}
.share-btn button{
	width: 330rpx;
	height: 90rpx;
	border-radius: 50rpx;
	font-size: 34rpx;
}
.share-btn-circle{
	line-height: 84rpx;
	border: 1rpx solid #ff3d3d;
	color: #ff3d3d;
	background: #fff;
}
.share-btn-friends{
	background: #ff3d3d;
	color: #fff;
	margin-left: 30rpx;
	line-height: 90rpx;
}
.receive-record{
	width: 100%;
	height: 52rpx;
	line-height: 52rpx;
	border: 1rpx solid #e6e6e6;
	background: #f7f7f7;
	padding: 0 30rpx;
  box-sizing: border-box;
}
.shadow-bless{
	box-shadow: 0 0 0 rgba(0,0,0,0) !important;
	border-bottom: 1rpx solid #f0f0f0;
}
.bless-record>view{
	height: 120rpx;
	padding: 0 30rpx;
  box-sizing: border-box;
}
.bless-record>view:not(:last-of-type),.bless-ranking-list >view:not(:last-of-type){
	border-bottom: 1rpx solid #f0f0f0;
}
.bless-record>view image,.bless-ranking-list >view image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.bless-ranking-list >view{
	height: 120rpx;
	padding: 0 50rpx 0 40rpx;
  box-sizing: border-box;
}
.share-bag-btn{
  width: 340rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #ff9b1f;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 58rpx;
  border-radius: 50rpx;
}
.receive-card{
  width: 180rpx;
  height: 60rpx;
  border-radius: 4rpx;
  background-color: #fd9a33;
}
