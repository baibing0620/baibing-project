}

.coupon-bottom {
  height: 60rpx;
}

.coupon-button {
  height: 40rpx;
  background: linear-gradient(0deg, #F93835 0%, #FD713C 100%);
  border-radius: 20rpx;
}

.coupon-button-disabled {
  height: 40rpx;
  background: #c9c9c9;
  border-radius: 20rpx;
}

.coupon-line {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 310rpx;
  height: 0;
  border-top: 1px dashed #FFFFFF;
}

.coupon-line::before, .coupon-line::after {
  content: '';
  height: 24rpx;
  width: 24rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  position: absolute;
  top: 50%;
}

.coupon-line::before {
  content: '';
  left: -18rpx;
  transform: translate(-50%, -50%);
}

.coupon-line::after {
  content: '';
  right: -18rpx;
  transform: translate(50%, -50%);
}
