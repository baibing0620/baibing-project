page {
    background-color: #f0f0f5;
}

.fr28, .fr30, .fr40 {
    line-height: 100%;
}

.label {
    width: 200rpx;
}

.profession-layout {
    position: relative;
}

.profession {
    height: 130rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #f2f2f2;
    position: relative;
    flex-wrap: nowrap;
    z-index: 6;
}

.profession-name {
    height: 100%;
    flex-wrap: nowrap;
}

.indus {
    max-width: 460rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow-x: hidden;
}

.info-layout {
    align-items: flex-start;
    padding-top: 50rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    padding-bottom: 120rpx;
}

.info-layout .label {
    line-height: 50rpx;
}

.tags-layout {
    justify-content: flex-end;
}

.tags-deleteMod {
    z-index: 4;
}

.tag-add {
    width: 100%;
    line-height: 30rpx;
    justify-content: flex-end;
    padding-right: 30rpx;
}

.tag-add>view {
    line-height: 50rpx;
}

.tag-add1 {
    margin-top: 30rpx;
}

.info-tag {
    line-height: 50rpx;
    background-color: #f0f0f0;
    width: 150rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
    border-radius: 4rpx;
    position: relative;
}

.info-tag-input {
    text-align: center;
    line-height: 50rpx;
    width: 100%;
    height: 100%;
}

.info-tag-delete {
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%, -50%);
}

.submit {
    height: 90rpx;
    width: 610rpx;
    border-radius: 4rpx;
    margin: 150rpx auto 0 auto;
}


.slider-layout-cover {
    position: fixed;
    left: 0;
    top: 0;
    overflow: hidden;
    height: 100vh;
    width: 100vw;
    z-index: 2;
}

.slider {
    box-sizing: border-box;
    align-items: flex-start;
    width: 100vw;
    background-color: #fff;
    flex-wrap: wrap;
    position: absolute;
    z-index: 3;                                                                                                                                                                      
    bottom: 0;
    left: 0;
    transform: translateY(100%);
    box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, .15);
    transition: .3s;
}

.slider-left, .slider-right {
    padding-top: 35rpx;
    padding-bottom: 51rpx;
}

.slider-right {
    background-color: #fff;
    transition: .3s;
    width: 50%;
}

.slider-right-hidden {
    width: 0;
    flex: 0;
}

.slider-left {
    background-color: #f7f7f7;
    width: 50%;
    transition: .3s;
}

.slider-left-rightHidden {
    width: 100%;
}

.slider-hide {
    transition: .5s;
    opacity: 0;
    bottom: 20rpx;
    visibility: hidden;
}

page .slider-none {
    display: none;
}

.slider-item {
    height: 84rpx;
    width: 50vw;
    box-sizing: border-box;
    padding-left: 60rpx;
    padding-right: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 84rpx;
    position: relative;
    transition: .3s;
    border-color: #c29844;
}

.slider-item-current {
    color: #c29844;
    background-color: #fff;
    font-weight: bold;
    border-left: 6rpx solid #c29844;
    padding-left: 52rpx;
}

.slider-item-current2 {
    color: #c29844;
    background-color: #f7f7f7;
    font-weight: bold;
}

.slider-loading-layout {
    height: 200rpx;
}

.slider-loading {
    height: 38rpx;
    width: 38rpx;
}






