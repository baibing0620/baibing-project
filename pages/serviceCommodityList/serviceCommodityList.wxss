.icon-dianzan2 {
    margin-right: 6rpx;
}

.layout {
    width: 100vw;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.input-layout {
    height: 60rpx;
    background-color: #f4f4f6;
    border-radius: 60rpx;
    box-sizing: border-box;
    padding-right: 30rpx;
}

.search {
    padding-left: 30rpx;
    padding-right: 20rpx;
    height: 100%;
}

.search-input {
    height: 100%;
}

.search-cancel {
    height: 100%;
}

.banner {
    width: 100vw;
	height: 370rpx;
    display: block;
}

.label-layout {
    height: 54rpx;
    position: relative;
    margin: 46rpx auto 40rpx auto;
}

.label-bg {
    width: 414rpx;
    height: 38rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.label {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
}

.label-icon-1, .label-icon-2 {
    height: 20rpx;
    width: 20rpx;
    position: absolute;
    bottom: 0;
}

.label-icon-1 {
    left: -20rpx;
    transform: translateX(-100%);
}

.label-icon-2 {
    right: -20rpx;
    transform: translateX(100%) rotateY(180deg);
}

.goods-list {
    margin: 40rpx auto 0 auto;
    width: 702rpx;
    overflow: hidden;
}

.goods-item {
    overflow: hidden;
    border-radius: 0 10rpx 10rpx 10rpx;
    width: 340rpx;
    height: 474rpx;
    position: relative;
    margin-right: 22rpx;
    margin-top: 22rpx;
    display: flex;
    flex-direction: column;
}

.goods-item:nth-child(2-n) {
    margin-top: 0;
}

.goods-item:nth-child(2n) {
    margin-right: 0;
}

.goods-recommend {
    position: absolute;
    width: 68rpx;
	height: 30rpx;
	border-radius: 0rpx 0rpx 15rpx 0rpx;
    left: 0;
    top: 0;
    background-color: #f24c3c;
}

.goods-thumb {
    border-radius: 10rpx 10rpx 0 0;
    overflow: hidden;
    width: 340rpx;
	height: 237rpx;
    display: block;
}

.goods-detail {
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    position: relative;
    flex: 1;
}

.goods-title-layout {
    margin-top: 10rpx;
}

.goods-title {
    line-height: 72rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.goods-content {
    line-height: 32rpx;
    color: #606972;
}

.goods-tags-layout {
    height: 40rpx;
    flex-wrap: wrap;
    width: 100%;
    overflow: hidden;
    left: 0rpx;
    bottom: 30rpx;
    padding-left: 20rpx;
    padding-right: 10rpx;
    position: absolute;
    box-sizing: border-box;
}

.goods-tags {
    box-sizing: border-box;
    font-size: 22rpx;
    color: #a7a9ab;
    min-width: 95rpx;
	height: 40rpx;
	background-color: #f1f4f7;
    border-radius: 18.5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
    margin-top: 20rpx;
    padding:0 12rpx;
    line-height:100%;
}

.goods-tags:nth-child(-n+3) {
    margin-top: 0;
}

.goods-tags:last-child {
    margin-right: 0;
}

.category-swiper {
    height: 310rpx;
}

.category-swiper-less {
    height: 154rpx;
}

.category-page {
    box-sizing: border-box;
    width: 100%;
    height: auto;
    padding: 10rpx 30rpx 20rpx 30rpx;
}

.category {
    width: 158rpx;
    height: 124rpx;
    box-sizing: border-box;
    padding-top: 10rpx;
    margin-right: 19.33rpx;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.category-hover {
    background-color: #f0f0f0;
}

.category:nth-child(4n) {
    margin-right: 0;
}

.category-icon {
    width: 62rpx;
    height: 62rpx;
    margin-bottom: 16rpx;
}

.category-text {
    line-height: 46rpx;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: -10rpx;
    text-align: center;
}

.swiper-box .wx-swiper-dot{
    display: inline-flex;
    border-radius: 3rpx;
    height: 6rpx;
    width: 8rpx;
}
.swiper-box .wx-swiper-dot{
    background: #e6e6e6;
}
.swiper-box .wx-swiper-dot-active{
    background:#f24c3c;   
    width: 15rpx;
}

