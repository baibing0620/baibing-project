.container {
	background: white;
	width: 100%;
}
.search-box{
	padding:0 20rpx;
	margin: 20rpx 0;
}
.input-box{
	background: #e9e8ee;
	height: 70rpx;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	border-radius: 35rpx;
	align-items: center;
}
.search-input {
	flex: 1;
	padding: 0 10rpx;
	min-height: 40rpx;
	color: #666666;
}

.cancel-btn{
	height: 60rpx;
	padding: 0 30rpx;
	margin-left: 20rpx;
	line-height: 40rpx;
	color: #fff;
  background-color: #ff6201;
  opacity: 0.7;
}

