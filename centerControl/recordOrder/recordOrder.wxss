/* centerControl/recordOrder/recordOrder.wxss */
page {
	padding-bottom: 180rpx;
}

.section-header {
	width: 100%;
	height: 96rpx;
	padding: 0 30rpx;
}

.box-border {
	border-bottom: 1rpx solid #f0f0f0;
}

.blue-divider {
	width: 6rpx;
	height: 36rpx;
	background: #1F94FD;
	margin-right: 10rpx;
}
.section-header .title {
	line-height: 35rpx;
}

.custom-box {
	width: 750rpx;
	height: 180rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}

.user-Icon {
	width: 80rpx;
	height: 80rpx;
	background: #1F94FD;
	border-radius: 50%;
	text-align: center;
	line-height: 80rpx;
	color: #fff;
}

.user-avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	overflow: hidden;	
}


.goods-box {

}

.goodsList {
	border-bottom: 1rpx solid #f0f0f0;
}

.goodsItem {
	width: 750rpx;
	height: 220rpx;
	box-sizing: border-box;
	padding: 30rpx;
	border-bottom: 1rpx solid #F7F7F7;
}

.img-box {
	width: 160rpx;
	height: 160rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.goods-right {
	height: 100%;
}

.goods-name {
	margin-right: 50rpx;
}

.goods-price {
	color: #FF262B;
}



.no-goods-box {
	padding: 40rpx 0 70rpx;
}
.no-goods-img-box, .no-goods-img {
	width: 370rpx;
	height: 200rpx;
}

.no-goods-img-box {
	margin-bottom: 54rpx;
}

.box {
	margin-top: 16rpx;
}
.content-box {
	width: 750rpx;
	height: 98rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}

.add-btn {
	width: 160rpx;
	height: 56rpx;
	border: 1rpx solid #1F94FD;
	border-radius: 4rpx;
	box-sizing: border-box;
	line-height: 54rpx;
	text-align: center;
	color: #1F94FD;
}

.certificate-box {
	padding-bottom: 40rpx;
}

.payCertificate {
  box-sizing: border-box;
  width: 300rpx;
  height: 180rpx;
  background-color: #f7f7f7;
  border: 1rpx solid #eee;
	margin-left: 30rpx;
}

.payCertificate>image {
  width: 100%;
  height: 100%;
}

.avatarDefalt {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  line-height: 24rpx;
}

.avatarIcon {
  font-size: 50rpx;
  line-height: 50rpx;
  margin-bottom: 28rpx;
	color: #ccc;
}

.imgError {
  box-sizing: border-box;
  height: 100%;
  color: #f00;
  padding: 18rpx;
}

.progress-view {
  padding: 18rpx;
  box-sizing: border-box;
  margin-top: 50%;
  transform: translateY(-50%);
}


.confirm-btn {
	position: fixed;
	bottom: 50rpx;
	left: 30rpx;
	width: 690rpx;
	height: 80rpx;
	border-radius: 10rpx;
	text-align: center;
	line-height: 80rpx;
	color: #fff;
	background: #1F94FD;
  z-index: 100
}

.input-box {
  border: 1rpx solid #CCCCCC;
  border-radius: 4rpx;
  height: 80rpx;
}

.realPriceBox {
  width: 750rpx;
  height: 120rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F7F7F7;
}

.p30 {
  padding: 0 30rpx;
}

.spec-box {
  padding-bottom: 30rpx;
}
.spec-box:first-of-type {
  border-bottom: 1px solid #F7F7F7;
}

.picker-box {
  width: 750rpx;
  height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F7F7F7;
}

.text-box {
  height: 200rpx;
  border: 1rpx solid #CCCCCC;
  padding: 25rpx 30rpx;
}
