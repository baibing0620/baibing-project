.p20{
  padding: 0 24rpx;
}
.p24{
  padding: 24rpx;
}
.B0{
  color: #B0B0B0;
}
.bgf2{
  background: #f2f2f2;
}
.category-item {
  box-sizing: border-box;
  padding: 30rpx 0 10rpx 0;
  text-align: center;
}
.shows{
  border: 4rpx solid #ff9b1f;
  border-radius: 4rpx;
  width: 50rpx;
  margin: auto;
  margin-top: 10rpx;
}
.simple_introduce{
  margin: 30rpx 30rpx 20rpx 30rpx;
  box-shadow: 2rpx 2rpx 8rpx 2rpx rgba(0,0,0,.1);
  border-radius: 10rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  display: flex;
  position: relative;
}
.simple_introduce>view:last-child>view{
  margin-bottom: 20rpx;
}
.go_tpl{
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  position: absolute;
  right: 10rpx;
  top: 90rpx;
  display: inline-block;
}
.detail{
  /* padding: 24rpx; */
  margin: 24rpx 0 200rpx 0;
}
.detail_detail{
  display: flex;
}
.record_time{
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
}
.record_time_line{
  flex: 1;
  width: 3rpx;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.record_msg{
  flex: 1;
  margin-bottom: 20rpx;
}
.record_msg>view{
  margin: 0 0 20rpx 0;
}
.record_msg_msg{
  line-height: 34rpx;
}
.allClaim{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  position: fixed;
  left: 5%;
  bottom: 30rpx;
}
.detail_msg{}
.detail_msg>view{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 10rpx;
}
.allClaim1{
  width: 100%;
  height: 100rpx;
  position: fixed;
  display: flex;
  justify-content: space-around;
  text-align: center;
  bottom: 0;
  background: white;
  padding: 20rpx 0;
  border-top: 1rpx solid #f2f2f2;
}
.addUp{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.1);
  position: fixed;
  top: 0;
}
.addUpInput{
  width: 600rpx;
  height: 600rpx;
  background: white;
  margin: auto;
  margin-top: 300rpx;
  position: relative;
  padding-top: 30rpx;
  border-radius: 10rpx;
}
.title{
  width: 100%;
  text-align: center;
}
.close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.close>text{}
.input_textarea>textarea {
  cursor: auto;
  width: 560rpx;
  height: 280rpx;
  display: block;
  position: relative;
  overflow: hidden;
  background: #f2f2f2;
  border: 1rpx solid #f2f2f2;
  border-radius: 10rpx;
  margin: auto;
  margin-top: 20rpx;
  padding: 10rpx;
}
.input-view-btn {
  height: 72rpx;
  width: 194rpx;
  margin: 0;
  padding: 0;
  border-radius: 10rpx;
  line-height: 72rpx;
  text-align: center;
  margin: auto;
  margin-top: 30rpx;
}
.input-view {
  transform: translateX(0);
  transition: .3s;
  opacity: 1;
}
.input-view-hide {
  top: 0;
  transform: translate(-50%, -100%);
  opacity: 0;
}
.backPool{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0,0,0,.1);
}
.backPool>view{
  width: 100%;
  background: white;
  margin: auto;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 40rpx 0 0 0;
}
.backPool>view textarea{
  width: 92%;
}
.save_close{
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0 0 0;
  border-top: 1rpx solid #f2f2f2;
  height: 120rpx;
}
.save_close>text{
  line-height: 120rpx;
  width: 50%;
}
.save_close>text:first-child{
  border-right: 1rpx solid #f2f2f2;
}
.save_close>text:last-child{
  flex: 1;
}