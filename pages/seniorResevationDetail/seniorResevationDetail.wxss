.bottom-box {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    box-shadow: 0 0 10rpx rgba(187,187,187,.3);
    background: #fff;
}
.bottom-box>view,.bottom-box>button{
    flex:1;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    border-right: 1rpx solid #e6e6e6;
    font-size: 42rpx;
    background-color: #fff;
    padding: 0;
    border-radius: 0;
}
.bottom-box>view:last-child{
    border: none;
    background-color: #fe5b36;
    color: #fff;
    font-size: 34rpx;
}