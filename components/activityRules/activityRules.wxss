    background:rgba(0,0,0,1);
    opacity:0.8;
    z-index: 900;
}

.content {
    width: 620rpx;
    position: fixed;
    z-index: 999;
    left: 50%;
    margin-left: -310rpx;
    top: 50%;
    transform: translateY(-50%);
    animation: showContent .3s;
}
@keyframes showContent {
    0% {
        transform: translateY(-50%) scale(0.1);
    }
    100% {
        transform: translateY(-50%) scale(1);
    }
}
