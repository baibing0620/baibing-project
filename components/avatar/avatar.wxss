.flex-c-c {
    display: flex;
    align-items: center;
    justify-content: center;
} 

.c-FFFFFF {
    color: #FFFFFF;
}

.layout, .placeholder, .avatar, .name, .icon {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.layout {
    position: relative;
}

.avatar, .name, .icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    line-height: 100%;
}

.placeholder {
    background-color: #E1E2E5;
    opacity: 1;
    transition: .3s;
}

.placeholder-hidden {
    opacity: 0;
}