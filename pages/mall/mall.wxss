.coupon {
  margin-left: 10rpx;
  width: 340rpx;
  background-image: linear-gradient(0deg, #FFCBB8 0%, #FFF1EC 100%);
  border-radius: 20rpx;
  overflow: hidden;
  display: inline-block;
}

.coupon:first-child {
  margin-left: 30rpx;
}

.coupon:last-child {
  margin-right: 30rpx;
}

.coupon-top {
  height: 134rpx;
}

.coupon-top-new::before {
  content: '新人优惠';
  font-size: 20rpx;
  color: #FFFFFF;
  padding: 0 20rpx 0 20rpx;
  height: 30rpx;
  background: linear-gradient(0deg, #F93835 0%, #FD713C 100%);
  border-radius: 0 0 20rpx 0;
  position: absolute;
  left: 0;
  top: 0;
}

.coupon-price::before {
  content: '￥';
  font-size: 20rpx;
  line-height: 100%;
}

.coupon-price-goods {
