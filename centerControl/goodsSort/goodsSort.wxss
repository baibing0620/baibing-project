page{
    background-color: #f5f5f5;
}
.sortTip{
    width: 100%;
    height: 60rpx;
    padding: 0 22rpx 0 29rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #808080;
    font-size: 24rpx;
    background-color: #e6e6e6;
    overflow: hidden;
}
/* .tipDes{
    
}*/
.closeTip{
    width: 30rpx;
    height: 30rpx;
    text-align: center;
} 
.goodsList{
    width: 100%;
    height: 230rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ebebeb;
    box-sizing: border-box;
    padding: 29rpx 22rpx 30rpx 29rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.desWords{
    width: 360rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.desWordsTitle{
    font-size: 28rpx;
    color: #333
}
.desWordsType{
    font-size: 26rpx;
    color: #333
}
.preview{
    width: 108rpx;
    height: 144rpx;
    position: relative;
}
.flag {
    width: 104rpx;
    height: 34rpx;
    background: #ff641f;
    border-bottom-right-radius: 17rpx;
    position: absolute;
    top: 0;
}
.previewContent{
    width: 188rpx;
    height: 62rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4rpx;
	border: solid 1rpx #cccccc;
    line-height: 62rpx;
    font-size: 24rpx;
    color: #999;
    box-sizing: border-box;
    position: absolute;
    right: 0;
    bottom: -12rpx;
    background-color: #fafafa;
}
.sortWord{
    text-align: right;
    font-size: 24rpx; 
    color: #999;
    flex: 3;
}
.sortInput{
    text-align: center;
    flex: 4;
    color: #ff9b1f;
    font-size: 28rpx;
}
.sortPlaceholderInput{
    color: #ff9b1f;
    font-size: 28rpx;
}
