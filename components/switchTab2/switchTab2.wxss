.box {
  width: 100%;
  height: 62rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex; 
  position: relative;
  top: 0;
  z-index: 2;
}

.item {
  flex: 1;
  transition: .1s;
  z-index: 999;
  display: flex;
  align-items: center;
  
}

.label {
  box-sizing: border-box;
  flex: 1;
  height: 62rpx;
  text-align: center;
  border-radius: 62rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: .3s;
}

.item::after {
  content: "";
  width: 18rpx;
}

.item:last-child::after {
  content: "";
  width: 0;
}

.label-normal {
  color: #999;
  border: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.label-switch {
  color: #fff;
  background-color: #000;
  border: 0;
}
