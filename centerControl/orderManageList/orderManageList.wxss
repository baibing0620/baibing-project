.fr24, .fr26 {
    line-height: 100%;
}

.cbf {
    color: #bfbfbf;
} 

.ellipsis {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.switchTabs {
    width: 100%;
    height: 90rpx;
    position: relative;
    background-color: #fff;
    overflow: auto;
    white-space: nowrap;
    box-sizing: border-box;
}

.switchTabLayout {
    display: inline-block;
    height: 100%;
    margin: 0 30rpx;
}

.switchTab {
    height: 100%;
    line-height: 90rpx;
    border-bottom: 6rpx solid transparent;
    transition: all .1s;
    box-sizing: border-box;
}

.switchTabSelected {
    color: #FE3636;
    border-bottom-color: #FE3636;
}
::-webkit-scrollbar {
    display:none
}


.line {
    height: 3rpx;
    position: absolute;
    bottom: 0;
    transition: .3s;
}

.line::after {
    content: "";
    position: absolute;
    height: 3rpx;
    width: 80rpx;
    border-radius: 3rpx;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    background-color: #ff9b1f;
}
.downSelect{
    width: 100vw;
    height: 80rpx;
    padding: 0 29rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #333333;
    font-weight: 500;
    padding: 0 30rpx;
}
.input{
    width: 100%;
}
.downSelectUnit{
    display: inline-block;
    color: #999;
    font-size: 22rpx;
    transform: rotate(90deg);
}
