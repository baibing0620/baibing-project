page {
    background-color: #f0f0f5;
}

.color1 {
    color: #facf8a;
}

.color2 {
    color: rgba(255, 255, 255, .4);
}

.fr16 {
    font-size: 16rpx;
}

.fr16, .fr20, .fr24, .fr26, .fr30, .fr40 {
    line-height: 100%;
}

.tabBar-layout {
    height: 112rpx;
}

.tabBar-layout>view {
    height: 112rpx;
}

.from {
    height: 80rpx;
    width: 690rpx;
    margin: 0 auto;
}

.card {
    width: 690rpx;
    height: 382rpx;
    border-radius: 4rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 60rpx 40rpx 0 40rpx;
    position: relative;
    box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, .1);
}

.name-layout {
    align-items: flex-end;
}

.name-layout .iconfont{
    width: 24rpx;
    height: 24rpx;
    border-radius: 4rpx;
    margin-left: 16rpx;
}

.name-layout .female {
    background-image: linear-gradient(#facf8a, #9d7c4f);
}

.name-layout .male {
    background-image: linear-gradient(#9d7c4f, #facf8a);
}

.job {
    margin-top: 40rpx;
}

.company {
    margin-top: 20rpx;
}

.tags {
    margin-top: 44rpx;
    color: #a37313;
    position: relative;
}

.tags::after {
    content: "";
    position: absolute;
    height: 30rpx;
    width: 20rpx;
    left: -20rpx;
    top: 50%;
    transform: translate(-100%, -50%);
    background-color: #a37313;
}

.info {
    margin-top: 42rpx;
}

.info>view {
    margin-right: 20rpx;
}

.info>view:last-child {
    margin-right: 0;
}

.info .iconfont {
    margin-right: 10rpx;
}

.avatar {
    position: absolute;
    top: 60rpx;
    right: 60rpx;
    box-sizing: border-box;
    height: 140rpx;
    width: 140rpx;
    border: 1rpx solid #c29844;
}

.bottomHolder {
    height: 124rpx;
}

