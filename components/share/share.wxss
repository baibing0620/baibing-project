/* 遮罩层 */
.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.6);
    animation: myfirst 0.3s;
    z-index: 130;
}
/* 分享的底部窗口 */
.share {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: fixed;
    left: 0;
    bottom: -400rpx;
    width:750rpx;
    height:326rpx;
    background:#F7F7F7;
    border-radius:20rpx 20rpx 0px 0px;
    z-index: 131;
}
.share-box {
    bottom: 0;
    animation: mysecond 0.3s;
}
.share-box-b100 {
  bottom: 100rpx;
  animation: mysecondb100 0.3s;
}
.un-share-box {
    animation: unmysecond 0.3s;
}
@keyframes mysecond {
    from {
        bottom: -326rpx;
    }
    to {
        bottom: 0;
    }
}
@keyframes mysecondb100 {
  from {
      bottom: -400rpx;
  }
  to {
      bottom: 100rpx;
  }
}

@keyframes unmysecond {
    from {
        bottom: 0;
    }
    to {
        bottom: -326rpx;
    }
}
.share-box-content {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    width: 100%;
    height: 206rpx;
    border-radius:20rpx 20rpx 0px 0px;
}
.share-box-content image {
    width: 60rpx;
    height: 60rpx;
}
.share-button {
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 30%;
    height: 100%;
    background-color: white;
    border: none;
}
.closeShare {
    width: 100%;
    height: 106rpx;
    background-color: white;
    line-height: 106rpx;
    text-align: center;
    font-weight:500;
    color:rgba(51,51,51,1);
}
/* 海报 */
.new-poster-box {
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    z-index: 131;
}
.new-poster {
    width:580rpx;
    /* height:810rpx; */
    /* background:rgba(255,255,255,1); */
    border-radius:20rpx;
    overflow: hidden;
}
.show-poster {
    animation: showPoster 0.3s;
}
@keyframes showPoster {
    from {
      transform:scale(0.1,0.1);
    }
    to {
      transform:scale(1,1);
    }
}
.new-poster-img {
    width: 100%;
    height: 100%;
}
.new-poster-img image {
    width: 100%;
    height: 100%;
}
.new-poster-download {
    padding-top: 55rpx;
}
.action-play {
    position: absolute;
    height: 810rpx;
    width: 580rpx;
}

.flexc {
    display: flex;
    align-items: center;
    justify-content: center;
}
.fr28 {
    font-size: 28rpx;
}
.c3 {
    color: #333333;
}
