page{
    padding-bottom: 98rpx;
    background-color: #fff;
}
.settingTip{
    width: 100%;
    height: 60rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    box-sizing: border-box;
    color: #ff9b1f;
    background-color: rgba(255, 155, 31, 0.1);
    line-height: 60rpx;
}
.setting{
    width: 100%;
    /* height: 800rpx; */
    padding: 40rpx 30rpx 40rpx 30rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.settingList{
    width: 690rpx;
    height: 154rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
picker .settingList{
    padding-bottom: 49rpx;
    border-bottom: 1px dashed #e5e5e5;
    margin-bottom: 48rpx;
}
.settingList-title{
    font-size: 24rpx;
    color: #333;
    line-height: 100%;
}
.settingList-input{
    width: 100%;
    height: 91rpx;
    background-color: #f7f7f7;
	border-radius: 6rpx;
	border: solid 1rpx #d9d9d9;
    padding: 0 28rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.settingList-input .input{
    line-height: 91rpx;
    font-size: 28rpx;
    width: 100%;
}
.settingUnit{
    font-size: 28rpx;
    color: #1a1a1a;
}
.freeMail{
    /* width: 690rpx;
    height: 355rpx; */
    margin-bottom: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.nofreeMail{
    width: 690rpx;
    height: auto;
    /* margin-bottom: 115rpx; */
    display: flex;
    border-bottom: 1px solid #ccc;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    margin: 16rpx 0;

}
.freeMailTitle{
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
}
.freeMailTitle text{
    font-size: 24rpx;
    color: #333333;
}
.freeMailImage image{
    width: 197rpx;
    height: 197rpx;
}
.freeMailImage{
    width: 197rpx;
    height: 197rpx;
}
.freeMailDes{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #666;
}
switch{
    transform: scale(0.75)
}
.saveBtn{
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #1F94FD !important;
    z-index: 100;
}

