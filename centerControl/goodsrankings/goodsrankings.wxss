.list>.select .icon{
    display: inline-block;
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 11rpx solid #333333;
    border-radius: 6rpx;
    margin-bottom: 5rpx;
    margin-left: 11rpx;
    transition: all 0.1s linear;
}
.list>.select .top{
    /*border-top: none;*/
    /*border-bottom: 11rpx solid #333333;*/
    transform: rotate(180deg);

}



.list>.goods{
    width: 100%;
    height: 210rpx;
    padding: 30rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #f0f0f0;
    display: flex;
}
.list>.goods>.goods_left{
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
}
.list>.goods>.goods_mid{
    flex: 2;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.list>.goods>.goods_right{
    flex: 6;
    height: 100%;
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}
.list>.goods>.goods_right>.goods_right_title{
    /*font-family: PingFangSC-Medium;*/
    font-size: 30rpx;
    line-height: 35rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.list>.goods>.goods_right>.goods_right_type_2{
    /*display: inline-block;*/
    width: 70rpx;
    /*height: 28rpx;*/
    background-color: #ebfaff;
    border-radius: 4rpx;
    /*border: solid 1rpx #3bcaff;*/
    box-sizing: border-box;
    font-size: 20rpx;
    line-height: 26rpx;
    text-align: center;
    color: #3bcaff;
}
.list>.goods>.goods_right>.goods_right_type_1{
    /*display: inline-block;*/
    width: 70rpx;
    /*height: 28rpx;*/
    background-color: #fff5e8;
    border-radius: 4rpx;
    /*border: solid 1rpx #ff9b1f;*/
    box-sizing: border-box;
    font-size: 20rpx;
    line-height: 26rpx;
    text-align: center;
    color: #ff9b1f;
}
.list>.goods>.goods_right>.goods_right_num{
    display: flex;
    position: relative;
}
.list>.goods>.goods_right>.goods_right_num>view{
    /*font-family: PingFangSC-Regular;*/
