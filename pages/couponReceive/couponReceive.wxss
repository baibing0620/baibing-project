/* coupon/couponReceive/couponReceive.wxss */

page {
  width: 750rpx;
  height: 100vh;
  background: linear-gradient(0deg, rgba(255, 145, 71, 1) 0%, rgba(253, 191, 71, 1) 100%) no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bgImgBox {
  width: 658rpx;
  height: 902rpx;
}

.defeatContainer {
  position: fixed;
  top: 310rpx;
  width: 690rpx;
  min-height: 380rpx;
  background: rgba(255, 252, 248, 1);
  box-shadow: 0px 10rpx 24rpx 5rpx rgba(255, 161, 71, 1);
  border-radius: 24rpx;
  box-sizing: border-box;
  padding: 62rpx 0 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.defeatContainer .defeat-result {
  color: #FF440A;
  font-weight: 500;
}

.defeatContainer .defeat-mark {
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  color: #8F6749;
  font-weight: 500;
  margin-top: 40rpx;
}

.singleToMall {
  width: 360rpx;
  height: 90rpx;
  background: linear-gradient(0deg, rgba(255, 146, 28, 1) 1%, rgba(255, 214, 104, 1) 100%);
  box-shadow: 0px 10rpx 16rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  margin-top: 70rpx;
  color: #684414;
}

.cartImg {
  width: 42rpx;
  height: 36rpx;
  margin-right: 19rpx;
}

.bottomContainer {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 69rpx;
}

.bottomContainer .bottom-btn {
  width: 300rpx;
  height: 90rpx;
  background: linear-gradient(0deg, rgba(255, 146, 28, 1) 1%, rgba(255, 214, 104, 1) 100%);
  box-shadow: 0px 10rpx 16rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  color: #684414;
}

.receiveContainer {
  position: fixed;
  top: 328rpx;
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.coupon-detail {
  width: 690rpx;
  height: 229rpx;
  background: url('https://card-1259510193.image.myqcloud.com//image/20200522/0bf048eff2a9ceb3.png');
  background-size: cover;
}

.coupon-left {
  width: 222rpx;
  color: #43220B;
  text-align: center;
}

.coupon-money {
  letter-spacing: -2rpx;
}

.coupon-right {
  flex: 1;
  box-sizing: border-box;
  padding-left: 48rpx;
}

.coupon-title {
  font-weight: bold;
  color: #43220B;
}

.coupon-rules {
  margin-top: 36rpx;
  line-height: 30rpx;
  color: #685345;
}

.coupon-time {
  margin-top: 20rpx;
  line-height: 100%;
  color: #685345;
}

.receive-help-info {
  font-size: 26rpx;
  line-height: 100%;
  margin-top: 50rpx;
  color: #613A1C;
}

.receiveContainer .toMall {
  margin-top: 30rpx;
  width: 406rpx;
  height: 102rpx;
  background: linear-gradient(0deg, rgba(255, 211, 179, 1) 1%, rgba(255, 250, 240, 1) 100%);
  box-shadow: 0px 10rpx 48rpx 6px rgba(159, 80, 25, 0.23);
  border-radius: 18rpx;
  color: #43220B;
  font-weight: bold;
  box-sizing: border-box;
}

.receiveContainer .toCouponList {
  margin-top: 60rpx;
  width: 406rpx;
  height: 102rpx;
  background: transparent;
  border-radius: 18rpx;
  color: #bb7a40;
  border: 1rpx solid #bb7a40;
  font-weight: bold;
  box-sizing: border-box;
}

.alignCenter {
  display: inline-block;
  text-align: center;
  width: 100%;
}