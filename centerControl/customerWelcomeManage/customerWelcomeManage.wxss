/* centerControl/customerWelcomeManage/customerWelcomeManage.wxss */

page {
  background: #fff;
  padding-bottom: 200rpx;
}
.settingContainer {
  box-sizing: padding-box;
  padding: 0 30rpx;
}
.setting-item {
  margin-top: 50rpx;
}
.item-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: rgba(51,51,51,1);
  margin-bottom: 38rpx;
}
.welcome-box {
  box-sizing: padding-box;
  padding: 30rpx;
  background: rgba(247,247,247,1);
  border: 1rpx solid rgba(217,217,217,1);
  border-radius: 16rpx;
}
.welcome-text {
  height: 400rpx;
  margin: 0 auto;
}
.placeholder_class {
  color: #999;
  font-size: 28rpx; 
  font-weight: 400;
}

.avatar {
  box-sizing: border-box;
  width: 400rpx;
  height: 400rpx;
  background-color: #f7f7f7;
  border: 1rpx solid #d9d9d9;
  border-radius:16rpx;
}

.avatar>image {
  width: 100%;
  height: 100%;
}

.avatarDefalt {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  line-height: 24rpx;
}

.avatarIcon {
 font-weight:bold;
  font-size:50rpx;
  line-height:226rpx;
  color:#999;
}
.imgError {
  box-sizing: border-box;
  height: 100%;
  color: #f00;
  padding: 18rpx;
}

.progress-view {
  padding: 18rpx;
  box-sizing: border-box;
  margin-top: 50%;
  transform: translateY(-50%);
}
.img-add {
  text-align: center;
}

.img-add>i {
  font-weight: bold;
  font-size: 50rpx;
  line-height: 226rpx;
  color: #999;
}

.submitbtn {
  width: 100%;
  height: 98rpx;
  background: #FF9B1F;
  font-size: 34rpx;
  font-weight: 400;
  color: #fff;
  line-height: 98rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}