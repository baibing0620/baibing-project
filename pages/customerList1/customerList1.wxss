.input-layout {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #ffffff;
}

.input-box {
  box-sizing: border-box;
  padding-left: 30rpx;
  width: 100%;
  height: 70rpx;
  border-radius: 100rpx;
  background-color: #f4f4f6;
}

.input {
  color: #333333;
  width: 540rpx;
}

.input-holder {
  color: #cccccc;
}

.search {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #999999;
  border-radius: 70rpx;
}
.customerList{
  padding: 0 20rpx;
}
.list_child{
  border-top: 1rpx solid #f2f2f2;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.list_child:last-child{
  border-bottom: 1rpx solid #f2f2f2;
}
.list_child_child{
  display: flex;
}
.weui-cell__hd>radio{
  color: #ff9b1f;
}
.save{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  position: fixed;
  left: 5%;
  bottom: 30rpx;
}