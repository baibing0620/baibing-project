.list>.select{
    width: 100%;
    height: 90rpx;
    box-shadow: 0rpx 1rpx 0rpx 0rpx #e5e5e5;
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    background-color: #fff;
    z-index: 799;
}
.list>.select>view{
    flex: 1;
    /*height: 100%;*/
}
.list>.select>view>picker{
    width: 100%;
    height: 36rpx;
    text-align: center;
    font-size: 26rpx;
    line-height: 34rpx;
    /*font-weight: bolder;*/
    border-right: 1rpx solid #dbdbdb;
    box-sizing: border-box;
}
.list>.select>.select_goods>picker:last-of-type{
    border-right: none;
}
