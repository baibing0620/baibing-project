page {
    width: 100%;
    box-sizing: border-box;
}

.container {
    background: #f8f8f8;
    padding-top: 6rpx;
}

.order-item {
    background: white;
    margin-top: 20rpx;
    padding: 10rpx 14px;
}

.order-item-title {
    line-height: 50rpx;
    height: 50rpx;
    border-bottom: 1rpx solid #dddddd;
}

.order-item-goods-item {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #dddddd;
}

.order-item-goods-thum {
    height: 100rpx;
    width: 100rpx;
}

.goods-des {
    margin-left: 20rpx;
    height: 100rpx;
}

.order-item-bottom {
    line-height: 50rpx;
    height: 50rpx;
}
