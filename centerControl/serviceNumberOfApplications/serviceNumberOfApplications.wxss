
.input-layout {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 15rpx 30rpx 0 30rpx;
    background-color: #ffffff;
}
  
.input-box {
    box-sizing: border-box;
    padding-left: 30rpx;
    width: 100%;
    height: 70rpx;
    border-radius: 100rpx;
    background-color: #f4f4f6;
}

.input {
    color: #333333;
    width: 540rpx;
}

.input-holder {
    color: #cccccc;
}

.search {
    padding: 0 40rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #999999;
    border-radius: 70rpx;
}
.container{
    width: 710rpx;
    background: #fff;
    height: 216rpx;
    border-radius: 10rpx;
    margin: 20rpx auto 0;
    border: 1rpx solid #e6e6e6;
    padding: 30rpx;
    box-sizing: border-box;
}
.container>image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.container>view{
    height: 120rpx;
}
.ml{
    margin-left: 10rpx;
}