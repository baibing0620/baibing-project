page {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background-image: linear-gradient(#2a3542, #546a84);
    box-sizing: border-box;
    padding: 30rpx;
}

.fr26, .fr28, .fr30, .fr34, .fr36 {
    line-height: 100%;
}

.layout {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.top {
    height: 90rpx;
    border-bottom: 1rpx solid #f5f5f5;
    padding: 0 30rpx;
}

.middle {
    padding: 70rpx 0;
    position: relative;
}

.avatar {
    height: 40rpx;
    width: 40rpx;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 12rpx;
}

.bottom {
    border-top: 1rpx solid #f5f5f5;
    padding: 40rpx 0 30rpx 0;
}

.userInfo {
    margin-bottom: 30rpx;
}

.avatar2 {
    height: 36rpx;
    width: 36rpx;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 8rpx;
}

.arrow {
    font-size: 46rpx;
    margin: 40rpx 0;
}

.item-layout {
    padding: 0 30rpx;
}

.item-layout>view {
    margin-bottom: 30rpx;
}

.item-layout>view:last-child {
    margin-bottom: 0;
}

.detail-layout {
    margin-top: 30rpx;
    overflow: hidden;
}

.detail {
    padding: 20rpx 30rpx;
    float: right;
}

.goods {
    align-items: flex-start;
}

.goods>view>view {
    max-width: 460rpx;
    overflow-x: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 20rpx;
}

.goods>view>view:first-child {
    margin-top: 0;
}

.explain {
    padding: 32rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.dialog {
    width: 600rpx;
    padding: 60rpx 40rpx 90rpx 40rpx;
    box-sizing: border-box;
}

.dialog-this-title {
    margin-bottom: 60rpx;
}

.dialog-this-subTitle {
    margin-bottom: 20rpx;
}

.dialog-this-formula {
    line-height: 46rpx;
    margin-bottom: 20rpx;
}
