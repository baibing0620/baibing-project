page {
    background: #ffffff;
}

.bg {
    width: 100%;
    height: 246rpx;
    background: #FF3636;
    position: sticky;
    margin-bottom: 146rpx;
}

.header {
    width: 690rpx;
    height: 280rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20px 0px rgba(153, 153, 153, 0.2);
    border-radius: 20rpx;
    margin: 0 auto;
    transform: translateY(82rpx);
    text-align: center;
}

.header>image {
    width: 100rpx;
    height: 98rpx;
    border-radius: 50rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
}

.nick-name {
    padding-top: 68rpx;
}

.rank {
    margin: 0 30rpx;
    padding-top: 22rpx;
    border-top: 1rpx solid #f7f7f7;
}

.btn {
    width: 180rpx;
    height: 44rpx;
    background: rgba(255, 54, 54, 1);
    border: 1px solid rgba(255, 54, 54, 1);
    border-radius: 22rpx;
}

.fr24 {
    line-height: 100%;
}

.mb34 {
    margin-bottom: 34rpx;
}

.container {
    padding: 30rpx 0;
    margin: 0 36rpx 0 20rpx;
    border-bottom: 1rpx solid #F7F7F7;
}

.row-number {
    width: 98rpx;
}

.container .row-number image {
    width: 54rpx;
    height: 60rpx;
}

.container>view>image:last-of-type {
    width: 68rpx;
    height: 68rpx;
    border-radius: 35rpx;
}