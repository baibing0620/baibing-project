@import '/comm/base.wxss';
.macMask {
    width: 100%;
    height: 100VH;
    background-color: rgba(0, 0, 0, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.layout-content {
    box-sizing: border-box;
    width: 580rpx;
	height: 500rpx;
	background-color: #ffffff;
    border-radius: 40rpx;
    padding:0 40rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1000;
}

.closeBtn {
    text-align: right;
    line-height: 40rpx;
    margin-top: 30rpx;
}

.closeBtn image {
    width: 40rpx;
    height: 40rpx;
}

.layout-content-input {
    height: 90rpx;
	background-color: #f7f8fa;
	border-radius: 10rpx;
    border: solid 4rpx #f2f5fa;
    margin-top:30rpx;
    line-height: 90rpx;
}

.submit {
    width: 300rpx;
	height: 80rpx;
	background-color: #ffa640;
    border-radius: 40rpx;
    line-height: 80rpx;
    margin: 40rpx auto 0;
}
.mt36 {
    margin-top: 36rpx;
}